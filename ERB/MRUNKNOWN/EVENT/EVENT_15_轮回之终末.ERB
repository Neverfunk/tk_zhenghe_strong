;ENG_NAME = THE_END_OF_CYCLE
;---------------------
;基本发生概率(1000分率100为10%)
;再加上configue项目的发生频率，所以概率还会有所变化
;---------------------
@EVENT_DAILY_THE_END_OF_CYCLE_RATE()
	CALL MRU_get_phase_rate("MRU_15",MRU_15_PHASE)
	IF RESULT != -1
		RETURN RESULT
	ELSE
        ;#; RETURN 1000
		RETURN !RAND:10
	ENDIF


;---------------------
;发生判定
;1可以发生，0不能发生
;---------------------
@EVENT_DAILY_THE_END_OF_CYCLE_DECISION()
    SIF !IS_MALE(MASTER)
        RETURN 0
    SIF !IS_COUNTRY(CFLAG:MASTER:所属) || IS_SP_COUNTRY(CFLAG:MASTER:所属)
    RETURN 0
	CALL MRU_event_check("MRU_15",MRU_15_PHASE)
	SIF RESULT == -1
		RETURN 0
	RETURN 1

;---------------------
;事件类型
;用于在设置中进行配置
;---------------------
@EVENT_DAILY_THE_END_OF_CYCLE_GENRE()
    RETURN デイリー_ジャンル_エロ


;---------------------
;名称
;返回空或不存在时使用注册名称
;---------------------
@EVENT_DAILY_THE_END_OF_CYCLE_NAME()
	CALL MRU_get_phase_name("MRU_15",MRU_15_PHASE)
	SIF RESULTS != ""
		RETURN
    RESULTS '= @"轮回之终末"


;---------------------
;本体
;---------------------
@EVENT_DAILY_THE_END_OF_CYCLE()
	IF MRU_15_PHASE == ""
		CALL MRU_event_set_next_phase("MRU_15",MRU_15_PHASE,"初见")
	ENDIF
	CALL MRU_event_procedure("MRU_15",MRU_15_PHASE)
	RETURN 1

