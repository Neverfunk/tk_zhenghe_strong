@BUILDING_SKILL_国家大妓院(COUNTRY_ID)
    #DIM COUNTRY_ID
    PRINTFORML 发动后使一名主角势力陷落角色获得所有《淫乱》特质
    PRINTFORML 冷却时间3回合
    PRINTFORML 是否发动
    CALL ASK_YN()
    IF !RESULT
        PRINTFORML 发动了《国家大妓院》的技能
        CALL BUILDING_SKILL_国家大妓院_FUNCTION(COUNTRY_ID)
        IF RESULT > 0
            BUILDING_SKILL_COLDTIME:COUNTRY_ID:建造物_国家大妓院 = 3
            PRINTFORMW 完毕
        ENDIF
    ENDIF


@BUILDING_SKILL_国家大妓院_FUNCTION(COUNTRY_ID)
    #DIM COUNTRY_ID
    #DIM CITY_ID
    SIF !IS_COUNTRY(COUNTRY_ID)
        RETURN
    CALL SINGLE_DRAWLINE
    PRINTFORML 请选择要获得所有淫乱系特质的角色
    CALL SINGLE_DRAWLINE
    CALL SELECT_CHARA_LIST_ONLY_LOGIC_SEX("国家大妓院", "NONE", "DEFAULT")
    IF RESULT >= 0
        CALL BUILDING_SKILL_国家大妓院_SETBIT(RESULT)
        RETURN 1
    ELSE
        RETURN 0
    ENDIF

@BUILDING_SKILL_国家大妓院_SETBIT(CHARA_ID)
    #DIM CHARA_ID
    SIF CHARA_ID < 0
        RETURN
    FOR LOCAL,素質_淫乱_淫乱,素質_淫乱_尿道狂い+1
        IF !GETBIT(TALENT:CHARA_ID:淫乱系, LOCAL)
            SETBIT TALENT:CHARA_ID:淫乱系, LOCAL
            CALL COLOR_PRINT(@"%ANAME(CHARA_ID)%获得了<%SEX_TALENT_NAME:LOCAL%>", カラー_ピンク)
            PRINTFORML
        ENDIF
    NEXT

