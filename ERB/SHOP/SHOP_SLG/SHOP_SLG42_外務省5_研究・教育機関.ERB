	ENDIF
NEXT
PRINTL

PRINTL
PRINTBUTTON "99[取消]", 99
;TranslatedMark 99[戻る]
PRINTL

REDRAW 0

$INPUT_LOOP
INPUT

IF RESULT == 99
	REDRAW 1
	RETURN

ELSEIF RESULT >= 0 && RESULT < 10 && !LOCAL:(RESULT + 100)
	;担当者を変更する
	IF RESULT == 0
		CALL Colonial_Office_university_RESEARCHER
	;研究を共有する
	ELSEIF RESULT == 1
		CALL Colonial_Office_university_BOOST
	;反乱を工作する
	ELSEIF RESULT == 2
