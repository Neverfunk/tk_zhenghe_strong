@SLG_BUILDING_UNIT_TIRED_RECOVER(COUNTRY_ID,UNIT_ID)
    #DIM COUNTRY_ID
    #DIM UNIT_ID
    IF CITY_OWNER:(UNIT_POSITION:(COUNTRY_ID):(UNIT_ID)) == COUNTRY_ID
		IF CHECK_BUILDING_FUNCTION_SELECT(UNIT_POSITION:COUNTRY_ID:UNIT_ID,COUNTRY_ID,建造物_伤兵医院) > 0
			UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) = MAX(UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) - (RESULT:1)*10, 0)
			BUILDING_TEXT = BUILDING_TEXT_伤兵医院(COUNTRY_ID,UNIT_POSITION:(COUNTRY_ID):(UNIT_ID),UNIT_ID)
		ENDIF
	ENDIF
    ;(従属国パッチ)清掃局を保有しているとき、部隊の疲労度を回復
	SIF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_清掃局) > 0
		UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) = MAX(UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) - 5, 0)

	IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_叛军电台) > 0
		UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) = MAX(UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) - 5, 0)
		BUILDING_TEXT = BUILDING_TEXT_叛军电台_2(COUNTRY_ID,UNIT_ID)
	ENDIF
	IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_短波电台) > 0
		UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) = MAX(UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) - 2, 0)
		BUILDING_TEXT = BUILDING_TEXT_短波电台_2(COUNTRY_ID,UNIT_ID)
	ENDIF
	IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_古神雕像) > 0
		UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) = MAX(UNIT_TIRED_COUNT:(COUNTRY_ID):(UNIT_ID) - 10, 0)
		BUILDING_TEXT = BUILDING_TEXT_古神雕像_2(COUNTRY_ID)
	ENDIF
    RETURN

