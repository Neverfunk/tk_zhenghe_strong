@K36_EMERGENCY_RESCUE
    #DIM STATUS
    STATUS = K36_CHECK_EMERGENCY_RESCUE()
    IF GETBIT(STATUS,4)
    ;CALL 龙场悟道
    ELSEIF GETBIT(STATUS,3)
        CALL K36_RESCUE_SHIKIEIKI
        RETURN 1
    ELSEIF GETBIT(STATUS,2)
        CALL K36_RESCUE_ONOZUKA
        RETURN 1
    ELSEIF GETBIT(STATUS,1)
        CALL K36_NORMAL_SENTENCE_IMAGE(@"有同伴被其他势力俘虏了")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"要进行营救吗？",1)
        CALL K36_NORMAL_SENTENCE_IMAGE_BUTTON(@"是",1)
        CALL K36_NORMAL_SENTENCE_IMAGE_BUTTON(@"否",0)
        INPUT
        IF RESULT
            CALL K36_RESCUE_PARTNER
            RETURN 1
        ELSE
            CALL K36_NORMAL_SENTENCE_IMAGE(@"今天还是算了",1)
            RETURN 0
        ENDIF
    ELSE
        RETURN 0
    ENDIF
    RETURN 0


