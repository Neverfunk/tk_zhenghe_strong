@MODIFY_MONEY(TARGET_MONEY,SHOW = 0)
#DIM TARGET_MONEY
#DIM SHOW
LOCAL = MONEY
MONEY = TARGET_MONEY
SIF SHOW
    CALL COLOR_PRINTW(@"金",, @"{LOCAL}", カラー_注意, "->",, @"{MONEY}", カラー_注意)

@ADD_MONEY(ADD_MONEY,SHOW = 0)
#DIM ADD_MONEY
#DIM SHOW
LOCAL = MONEY
MONEY += ADD_MONEY
SIF SHOW
    CALL COLOR_PRINTW(@"金",, @"{LOCAL}", カラー_注意, "->",, @"{MONEY}", カラー_注意)