	RETURN 0

RETURN CHECK_KOJO_DAILY_HAPPEN(対象, 1, 0, 1) && IS_SLAVED_BY(対象) && !IS_LOVER(対象) && HAS_PENIS(MASTER) && COOLTIME:MASTER:0 >= 2

