FOR LOCAL:1, 0, MAX_CITY
	LOCAL:0 = SHAFFLE_ARRAY:(LOCAL:1)
	IF CITY_OWNER:(LOCAL:0) == ARG:0
		CITY_ECONOMY:(LOCAL:0) -= LOCAL:5
		IF CITY_ECONOMY:(LOCAL:0) >= 5000
