CALL COLOR_PRINT("禮物↑和贈送対象↓合計必須選択2名", カラー_注釈)
CALL COLUMN_RIGHT_PRINTL
CALL COLUMN_RIGHT_LINE
CALL COLUMN_RIGHT_PRINTL

