IF RESULT == 2
	CLEARLINE LINECOUNT - FIRST_LINE
	RESTART
ENDIF

IF RESULT == 0
	LOCAL = SCOUT_PRICE:対象添え字
ELSE
	PRINTFORM 要付多少錢……？ (所持金:{MONEY}) 要求額:
	PRINTBUTTON @"[{SCOUT_PRICE:対象添え字}]", SCOUT_PRICE:対象添え字
	$PAYMENT_LOOP
	INPUT
	LOCAL = RESULT
	SIF LOCAL > MONEY
		GOTO PAYMENT_LOOP
ENDIF

