			対象数 ++
		ENDIF
		SIF 対象数 == VARSIZE("対象勢力")
			BREAK
	NEXT
ENDIF

;まだ空きがあれば、ランダムに決定する
IF 対象数 != VARSIZE("対象勢力")
	CALL FISHER_YATES_SHAFFLE(MAX_COUNTRY)
	FOR LOCAL, 0, MAX_COUNTRY
		LOCAL:1 = SHAFFLE_ARRAY:LOCAL
		SIF !IS_COUNTRY(LOCAL:1) || GROUPMATCH(LOCAL:1, 勢力, 相手勢力) || MATCH(対象勢力, LOCAL:1)
			CONTINUE
