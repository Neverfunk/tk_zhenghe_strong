    BUILDING_TOHO_REQ_ID:建造物_短波电台:0 = 0

@CHECK_BUILDING_FUNCTION_短波电台(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    RESULT:1 = TMP_BUILDING_EXIST_FLAG:COUNTRY_ID:建造物_短波电台
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_短波电台_1(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 因为《短波电台》的存在，
    PRINTFORML 本国士官对%ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的评价上升了！
    RETURNF 1

@BUILDING_TEXT_短波电台_2(COUNTRY_ID,UNIT_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM UNIT_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 因为《短波电台》的存在，
    PRINTFORML %ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的军队{UNIT_ID}疲劳恢复了！
    RETURNF 1

