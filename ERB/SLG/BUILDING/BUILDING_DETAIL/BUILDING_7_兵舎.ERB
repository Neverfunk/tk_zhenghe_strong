@BUILDING_GET_NAME_兵舎()
    #FUNCTIONS
    RETURNF "兵舎"

@BUILDING_GET_EXP_兵舎()
    #FUNCTIONS
    RETURNF "每回合的征兵数量和征兵的极限增加。"

@BUILDING_SET_INFO_ID_7()
    BUILDING_TYPE:建造物_兵舎 = 建造物_类型_军事类
    BUILDING_LEVEL:建造物_兵舎 = 建造物_等级_一级建筑
    BUILDING_LIMIT_NUM:建造物_兵舎 = 建造物_数量限制_无
    BUILDING_LIMIT_UNI:建造物_兵舎 = 0
    BUILDING_COUNTRY_ID:建造物_兵舎:特殊勢力_普通势力 = 1
    BUILDING_HAVE_SKILL:建造物_兵舎 = 0
    BUILDING_TOHO_REQ_ID:建造物_兵舎:0 = 0


@CHECK_BUILDING_FUNCTION_兵舎(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    RESULT:1 = TMP_BUILDING_CNT:COUNTRY_ID:建造物_兵舎
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_兵舎(COUNTRY_ID,RATE)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM RATE
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORML 因为《兵舎》的存在，%ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%势力征兵率增加了{RATE}\%
    RETURNF 1
