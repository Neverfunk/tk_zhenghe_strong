;─────────────────────────────────────── 
;●コマンド実行前日常300～
;─────────────────────────────────────── 
@KOJO_K10_NOON(レミリア_対象,前後)
#DIM レミリア
#DIM レミリア_対象
#DIMS 前後
#DIMS レミリア口上実対カテゴリ

IF !レミリア_対象
	レミリア_対象 = MASTER
ENDIF

;リセット
レミリア = NAME_TO_CHARA("レミリア")
レミリア口上実対カテゴリ '= ""

;─────────────────────────────────────── 
;●詳細カテゴリ決定
;─────────────────────────────────────── 
IF IS_MPLY(レミリア)
	レミリア口上実対カテゴリ '= "実行"
ELSE
	レミリア口上実対カテゴリ '= "レミリア_対象"
ENDIF

;─────────────────────────────────────── 
;●詳細カテゴリによる分岐
;─────────────────────────────────────── 
IF レミリア口上実対カテゴリ == "実行"
	;前文か後文か
	IF 前後 == "前"
		CALL KOJO_K10_NOON_BEFORE_PLAYER(レミリア_対象)
	ELSEIF 前後 == "後"
		CALL KOJO_K10_NOON_AFTER_PLAYER(レミリア_対象)
	ENDIF
ELSEIF レミリア口上実対カテゴリ == "レミリア_対象"
	;前文か後文か
	IF 前後 == "前"
		CALL KOJO_K10_NOON_BEFORE_TARGET(レミリア_対象)
	ELSEIF 前後 == "後"
		CALL KOJO_K10_NOON_AFTER_TARGET(レミリア_対象)
	ENDIF
ENDIF

RESETCOLOR
RETURN RESULT

