;細かな条件は自分で設定してね
;ARG:1 0 MASTERと別勢力である 1 MASTERと同一勢力である　-1 どちらでもよい
;ARG:2 0 捕虜でない 1 捕虜である -1 どちらでもよい
;ARG:3 0 面識がない 1 面識がある -1 どちらでもよい
;-------------------------------------------------
@CHECK_KOJO_DAILY_HAPPEN(ARG:0, ARG:1 = -1, ARG:2 = -1, ARG:3 = -1)
#FUNCTION
#DIM EVENT_ODDS
EVENT_ODDS = KOJO_DAILY_EVENT_ODDS

;MASTERならダメ
SIF ARG:0 == MASTER
	RETURNF 0

;範囲外はもちろんアウト
SIF ARG:0 < 0 || CHARANUM <= ARG:0
	RETURNF 0
;死んでたら駄目
SIF CFLAG:(ARG:0):特殊状態 == 特殊状態_死亡
	RETURNF 0
;未登場もだめ
SIF CFLAG:(ARG:0):所属 == 0 && CFLAG:(ARG:0):特殊状態 == 0 && !CFLAG:(ARG:0):捕虜先
	RETURNF 0
;所属判定
SELECTCASE ARG:1
	CASE -1
	CASE 0
		SIF CFLAG:(ARG:0):所属 == CFLAG:MASTER:所属
			RETURNF 0
	CASE 1
		SIF CFLAG:(ARG:0):所属 != CFLAG:MASTER:所属
			RETURNF 0
	CASEELSE
		RETURNF 0
ENDSELECT
;捕虜判定
SELECTCASE ARG:2
	CASE -1
	CASE 0
		SIF CFLAG:(ARG:0):捕虜先
			RETURNF 0
	CASE 1
		SIF !CFLAG:(ARG:0):捕虜先
			RETURNF 0
	CASEELSE
		RETURNF 0
ENDSELECT
;面識判定
SELECTCASE ARG:3
	CASE -1
	CASE 0
		SIF CFLAG:(ARG:0):面識
			RETURNF 0
	CASE 1
		SIF !CFLAG:(ARG:0):面識
			RETURNF 0
	CASEELSE
		RETURNF 0
ENDSELECT
RETURNF 1
