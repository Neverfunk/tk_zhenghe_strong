@SELECT_CHARA_RANDOM_LOGIC_MRU_3(対象)
	#DIM 対象
    #DIM CHARA_ID
	SIF !IS_TOHO_CHARA(対象)
        RETURN 0
	SIF !IS_FEMALE(対象)
        RETURN 0
    CHARA_ID = ID_TO_CHARA(対象)
    SIF TALENT:CHARA_ID:恋慕 || TALENT:CHARA_ID:服従
        RETURN 0
	SIF (MRU_3_记录恋慕:CHARA_ID == TALENT:CHARA_ID:恋慕)&&(MRU_3_记录服从:CHARA_ID == TALENT:CHARA_ID:服従)
		RETURN 0
	SIF GET_COUNTRY_BOSS(CFLAG:対象:所属) == 対象
        RETURN 0
	SIF CFLAG:対象:所属 == CFLAG:MASTER:所属 && CFLAG:対象:捕虜先 != CFLAG:MASTER:所属 && CFLAG:対象:捕虜先 != 0
		RETURN 0
	SIF CFLAG:対象:所属 != CFLAG:MASTER:所属 && CFLAG:対象:捕虜先 != CFLAG:MASTER:所属
		RETURN 0
    RETURN MRU_CHECK_CHARA_BASE(対象)

