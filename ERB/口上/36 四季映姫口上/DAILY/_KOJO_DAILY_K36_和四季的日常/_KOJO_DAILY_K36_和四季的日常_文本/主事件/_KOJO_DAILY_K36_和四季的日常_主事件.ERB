    EVENT_ID = RESULT
    TRYCCALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}
        K36_和四季的日常_主事件_上次触发日期:EVENT_ID = DAY
    CATCH
        CALL K36_NEVERMIND_EVENT_1
        K36_和四季的日常_主事件_上次触发日期:1 = DAY
    ENDCATCH
@K36_NEVERMIND_MAIN_GETEVENTID
    ;本来想扩展IFRAND加个权重来随机事件的……摸了
    #DIM EVENT_ID
    #DIM DYNAMIC EVENT_ID_RAND_ARRAY,10000
    #DIM DYNAMIC EVENT_ID_RAND_NUM
    FOR EVENT_ID,1,120
        TRYCCALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}_EXIST
            ;是否能触发
            CALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}_STATUS
            SIF !RESULT
                CONTINUE
            ;触发几率
            CALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}_RATE
            REPEAT RESULT
                IF EVENT_ID_RAND_NUM < 10000
                    EVENT_ID_RAND_ARRAY:EVENT_ID_RAND_NUM = EVENT_ID
                    EVENT_ID_RAND_NUM ++
                ENDIF
            REND
        CATCH
        ENDCATCH
    NEXT
    [IF_DEBUG]
        LOCAL:1 = -1
        FOR LOCAL,0,EVENT_ID_RAND_NUM
            SIF LOCAL:1 == EVENT_ID_RAND_ARRAY:LOCAL
                CONTINUE
            PRINTFORML EVENT_ID = {EVENT_ID_RAND_ARRAY:LOCAL}
            LOCAL:1 = EVENT_ID_RAND_ARRAY:LOCAL
        NEXT
        FORCEWAIT
    [ENDIF]
    RETURN EVENT_ID_RAND_ARRAY:(RAND:EVENT_ID_RAND_NUM)


