;統計情報のコンフィグに関する処理

;-------------------------------------------------
;統計の設定と出力
;-------------------------------------------------
@STATS_CONFIG
CALL SINGLE_DRAWLINE
PRINTL ●輸出統計的数據●
CALL SINGLE_DRAWLINE
PRINTFORM [ 0] %"処理統計関係", 40, LEFT%
PRINTFORML %STATS_STOPPED ? "停止" # "進行"%
CALL SINGLE_DRAWLINE
PRINTFORML [11] 経済力 的記録進行輸出
PRINTFORML [12] 国庫 的記録進行輸出
PRINTFORML [13] 兵数 的記録進行輸出
PRINTFORML [21] 同盟 的記録進行輸出
PRINTFORML [22] 停戦 的記録進行輸出
CALL SINGLE_DRAWLINE
PRINTL [99] 決定

$INPUT_LOOP
INPUT

IF RESULT == 99
	RETURN
ELSEIF RESULT == 0
	STATS_STOPPED = !STATS_STOPPED
ELSEIF RESULT == 11
	PRINTFORML 輸出了統計情報(経済力)。
	CALL STATS_OUTPUT(STATS_GDP)
	WAIT
ELSEIF RESULT == 12
	PRINTFORML 輸出了統計情報(国庫)。
	CALL STATS_OUTPUT(STATS_WEALTH)
	WAIT
ELSEIF RESULT == 13
	PRINTFORML 輸出了統計情報(兵数)。
	CALL STATS_OUTPUT(STATS_ARMY)
	WAIT
ELSEIF RESULT == 21
	PRINTFORML 輸出了現在的同盟状況。
	CALL TREATY_OUTPUT(1)
	WAIT
ELSEIF RESULT == 22
	PRINTFORML 輸出了現在的停戦状況。
	CALL TREATY_OUTPUT(0)
	WAIT
ELSE
	GOTO INPUT_LOOP
ENDIF
RESTART
