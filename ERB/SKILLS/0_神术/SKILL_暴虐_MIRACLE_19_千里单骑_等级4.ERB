@SKILL_0_MIRACLE_19_SELFLEARN(对象)
;返回自学优先度
;不允许自学的技能直接返回0或不添加本函数,基础技能的升级版技能也同上
#DIM 对象
#DIM 优先度
#DIM 技能ID = 19
#DIM 上任
优先度 = 0
;信仰等级要求
CALLFORM SKILL_0_MIRACLE_{技能ID}_LEVEL
SIF ABL:对象:信仰 < FAITH_LEVEL:RESULT
	RETURN 0
;神术等级加成,一般认为越高越强
优先度 += RESULT * 20
;已有技能联动
;SIF FIND_GENERAL_SKILL(对象,"技能名")
;角色属性
SIF ABL:对象:武闘 >= 70
	优先度+= 50
SIF ABL:对象:武闘 <= 30
	优先度-= 50
SIF ABL:对象:防衛 >= 70
	优先度+= 50
SIF ABL:对象:防衛 <= 30
	优先度-= 50
;角色是否主公
;SIF 对象 == GET_COUNTRY_BOSS(CFLAG:对象:1)

;领土数量
;SIF GET_OWN_CITY(CFLAG:对象:1) <= 3

;就任情况
上任 = 0
IF CFLAG:对象:所属 != 0
	FOR LOCAL:0, 0, MAX_COUNTRY
		IF IS_COUNTRY(LOCAL:0)
			FOR LOCAL:1, 0, 10
				IF UNIT_COMMANDER:(LOCAL:0):(LOCAL:1) != 0
					FOR LOCAL:2, 0, MAX_UNIT_COMMANDER
						IF GET_UNIT_COMMANDER(LOCAL:0, LOCAL:1, LOCAL:2) == 对象
							;对象 = 势力LOCAL:0的部队LOCAL:1的第LOCAL:2将领
							上任 = 1
							SIF GET_UNIT_COMMANDER(LOCAL:0, LOCAL:1+1) == GET_UNIT_COMMANDER(LOCAL:0, LOCAL:1+2)
								;独自一人领军的情况
								优先度 += 300
						ENDIF
					NEXT
				ENDIF
			NEXT
		ENDIF
	NEXT
ENDIF
SIF !上任
	优先度 -= 100
;势力方针/倾向
IF CFLAG:对象:所属 == CFLAG:MASTER:所属 ;暂时无用
	SELECTCASE COUNTRY_POLICY:(CFLAG:对象:所属)
		CASE 政策_経済
			优先度 -= 20
		CASE 政策_徴兵
			优先度 += 20
		CASE 政策_防衛
			优先度 -= 20
		CASEELSE ;政策未定
	ENDSELECT
ELSE
	SELECTCASE COUNTRY_AI_TYPE:(CFLAG:对象:所属)
		CASE AI_通常
		CASE AI_好戦
			优先度 += 20
		CASE AI_防衛
			优先度 += 10
		CASE AI_外交
			优先度 -= 20
		CASE AI_内政
			优先度 -= 20
		CASE AI_蛮行
			优先度 += 30
		CASE AI_ホフゴブリン
	ENDSELECT
ENDIF
;角色成长型
SELECTCASE TALENT:对象:300 
	CASE 0 ;万能 武防知政
		优先度 += 20
	CASE 1 ;知将 武防知
		优先度 += 30
	CASE 2 ;学士 政治 知略
		优先度 -= 30
	CASE 3 ;两道 武防政
		优先度 += 30
	CASE 4 ; 武官 武防
		优先度 += 50
	CASE 5 ;军师 知略
		优先度 -= 30
	CASE 6 ;文官 政治
		优先度 -= 50
	CASE 7 ;芸能 歌唱
		优先度 -= 30
	CASE 8 ;料理
		优先度 -= 30
	CASE 9 ;天才
ENDSELECT
RETURN MAX(优先度,0)

