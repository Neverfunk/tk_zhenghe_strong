@SLG_BUILDING_TURNEND_CHANGE_RESERCH_SPEED(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM RESERCH_ADD
    RESERCH_ADD = 0
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_月都数据库) > 0
        RESERCH_ADD +=1
        BUILDING_TEXT = BUILDING_TEXT_月都数据库(COUNTRY_ID)
    ENDIF
    RESERCH_ADD -= SLG_BUILDING_DECREASE_RESERCH_SPEED(COUNTRY_ID)
    RETURNF RESERCH_ADD


@SLG_BUILDING_DECREASE_RESERCH_SPEED(COUNTRY_ID)
    #FUNCTION
    #DIM 外来人_COUNTRY_ID
    #DIM COUNTRY_ID
    外来人_COUNTRY_ID = GET_COUNTRY_FROM_ID(SP_COUNTRY_ID:特殊勢力_外来人)
    SIF !IS_COUNTRY(外来人_COUNTRY_ID) || !IS_COUNTRY(COUNTRY_ID)
        RETURNF 0
    SIF 外来人_COUNTRY_ID == COUNTRY_ID
        RETURNF 0
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_科学阻断器) > 0
        IF COUNTRY_ID == CFLAG:MASTER:所属
            IF RAND:100 < MIN(20 + DAY,50)
                BUILDING_TEXT = BUILDING_TEXT_科学阻断器(COUNTRY_ID,1)
                RETURNF 1
            ELSE
                BUILDING_TEXT = BUILDING_TEXT_科学阻断器(COUNTRY_ID,0)
            ENDIF
        ELSE
            IF RAND:100 < MIN(DAY,30)
                BUILDING_TEXT = BUILDING_TEXT_科学阻断器(COUNTRY_ID,1)
                RETURNF 1
            ELSE
                BUILDING_TEXT = BUILDING_TEXT_科学阻断器(COUNTRY_ID,0)
            ENDIF

        ENDIF
    ENDIF
    RETURNF 0
