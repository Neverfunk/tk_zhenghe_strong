@CHECK_BUILDING_FUNCTION_独占市场(CITY_ID)
    #FUNCTION
    #DIM CITY_ID
    #DIM TAX
    #DIM ECONOMY
    #DIM CNT
    CNT = 0
    TAX = 500
    ECONOMY = 20
    CNT = GET_CITY_BUILDING_NUM(CITY_ID,建造物_独占市场)
    TAX*=CNT
    ECONOMY*=CNT
    IF TMP_BUILDING_EXIST_FLAG:(CITY_OWNER:(CITY_ID)):建造物_全国市场 == 1
        TAX *= 2
        ECONOMY *= 2
    ENDIF
    RESULT:0 = CNT
    RESULT:1 = TAX
    RESULT:2 = ECONOMY
    RETURNF RESULT:0

@BUILDING_TEXT_独占市场(CITY_ID,ECONOMY)
    #FUNCTION
    #DIM CITY_ID
    #DIM ECONOMY
    SIF !CHECK_BUILDING_TEXT_OUTPUT(CITY_OWNER:CITY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORML 因为独占市场的存在，%CITY_NAME:CITY_ID%获得了{ECONOMY}的经济值
    RETURNF 1
