@CHECK_BUILDING_FUNCTION_前线哨站(CITY_ID,COUNTRY_ID)
    #FUNCTION
    #DIM CITY_ID
    #DIM COUNTRY_ID
    SIF COUNTRY_ID != CITY_OWNER:CITY_ID
        RETURNF 0
    IF CITY_ID > 0
        COUNTRY_ID = CITY_OWNER:CITY_ID
        RESULT:2 = GET_CITY_BUILDING_NUM(CITY_ID,建造物_前线哨站)
    ENDIF
    SIF !CHECK_BUILDING_SP_COUNTRY_LIMIT_USING(COUNTRY_ID,建造物_前线哨站)
        RETURNF RESULT:0
    RESULT:1 = TMP_BUILDING_CNT:COUNTRY_ID:建造物_前线哨站
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

