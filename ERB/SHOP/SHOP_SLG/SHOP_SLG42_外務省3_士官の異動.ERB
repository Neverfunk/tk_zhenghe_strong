CALL SINGLE_DRAWLINE
PRINTFORML 请选择需要移籍的士官
CALL SINGLE_DRAWLINE

CALL SELECT_CHARA_LIST_ONLY_LOGIC_SLG("SUMMON_CHARA", "NONE")


SIF RESULT == -1
	RETURN 0

対象 = RESULT

;対象キャラの情報を表示
FLAG:能力表示モード = 0
