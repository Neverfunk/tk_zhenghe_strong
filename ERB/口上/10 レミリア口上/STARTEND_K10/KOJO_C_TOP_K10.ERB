@KOJO_TRAIN_START_C_K10
#DIM レミリア_対象
#DIM レミリア

レミリア_対象 = MASTER
レミリア = NAME_TO_CHARA("レミリア")

;レミリア口上の使用可否設定と初期化
SIF CFLAG:レミリア:400 == 0
	CALL KOJO_ASK_RESET_K10

;口上を不使用設定なら戻る
SIF CFLAG:レミリア:400 == 1
	RETURN 0

SETCOLOR レミリア_口上カラー

;─────────────────────────────────────── 
;○初回
;─────────────────────────────────────── 
IF CFLAG:レミリア:204 == 0

	;逆調教口上初回呼び出しフラグオン
	CFLAG:レミリア:204 = 1

	;───────────────────────────────────── 
	;▼虚ろ
	;───────────────────────────────────── 
	IF TALENT:レミリア:空虚
		PRINTFORML 「……嗯……嗯……嗯……」
		;TranslatedMark 「……う……ぅう……ん……」
		PRINTFORMDL %ANAME(レミリア)%带着空虚的目光接近了……
		;TranslatedMark %ANAME(レミリア)%は虚ろな瞳で近付いてきた……
		WAIT
		RESETCOLOR
		RETURN 0
	ENDIF

	;───────────────────────────────────── 
	;▼通常
	;───────────────────────────────────── 
	IF CHECK_K10("陥落", レミリア_対象)
		PRINTFORMW 「这会是什么呢。调教……惩罚。审判？玩弄娃娃？」
		;TranslatedMark 「これって何になるのかしら。躾……お仕置き。裁判？　お人形遊び？」
		PRINTL 
		PRINTFORML 「什么都可以。总之，我想要和%CALLNAME_K10(レミリア_対象)%一起」
		;TranslatedMark 「なんでもいいわ。とにかく、私は%CALLNAME_K10(レミリア_対象)%が欲しいの」
		PRINTFORML 「你向我发誓忠诚！把你的血亲手献给我」
		;TranslatedMark 「私に忠誠を誓いなさい！　その血を自ら私に捧げなさい」
		PRINTFORMW 「不然的话，就只能把你变成石头了」
		;TranslatedMark 「でないとグールにしてしまうわよ」
		PRINTL 
		PRINTFORML 「可以吗？不过，违抗也只会死。毕竟，你是我的」
		;TranslatedMark 「いい？　逆らっても死ぬだけ。おまえは私のもの」
		PRINTFORML 「如果好好地听话的话，我就不会吸干血而杀死你了」
		;TranslatedMark 「ちゃんと言うことを聞けたら、紅い血を吸い尽して殺してしまったりはしないわ」
		PRINTFORMW 「一辈子在我身边养着，一边疼爱着你一边吸着你的血」
		;TranslatedMark 「一生私の傍で飼って、可愛がりながら啜ってあげる」
		IF IS_MALE(レミリア_対象) && MARK:レミリア:既成事実 < 3
			PRINTL 
			PRINTFORML 「男人如果舒服的话的话会流白血吧？」
			;TranslatedMark 「男のひとって、気持ちよくなると白い血が出るんでしょ？」
			PRINTFORML 「我在书上读过。总之，那样就可以了，快过来吧」
			;TranslatedMark 「本で読んだのよ。とりあえずそれでいいから、寄越しなさい」
			PRINTFORMW 「也许能吃」
			;TranslatedMark 「食べられるかもしれないし」
		ELSEIF IS_FEMALE(レミリア_対象) && MARK:レミリア:既成事実 < 3
			PRINTL 
			PRINTFORML 「女孩子舒服的话，会从大腿流出透明的血吧？」
			;TranslatedMark 「女の子は気持ちよくなると、股から透明な血が出るでしょ？」
			PRINTFORMW 「书上是这么写的，试了一下，我也会哦。那样就可以了，过来吧」
			;TranslatedMark 「本で読んで、試したら私もできたのよ。それでいいから、寄越しなさい」
		ENDIF
		PRINTL 
		PRINTFORML 「追求你的，是高贵的吸血鬼。心怀感激地接受吧」
		;TranslatedMark 「高貴な吸血鬼である私の求めよ。感謝して受けなさい」

	ELSE
		PRINTFORMW 「这会是什么呢。调教……惩罚。审判？玩弄娃娃？」
		;TranslatedMark 「これって何になるのかしら。躾……お仕置き。裁判？　お人形遊び？」
		PRINTL 
		PRINTFORML 「做什么都可以。我不想让%CALLNAME_K10(レミリア_対象)%死」
		;TranslatedMark 「なんでもいいわ。私は%CALLNAME_K10(レミリア_対象)%を死なせたくないの」
		PRINTFORML 「虽然不太清楚为什么这么做能让人听话，不过，这是有效的呢……」
		;TranslatedMark 「人間を従わせるために、どうしてこれが有効なのかはよくわからないけれど……」
		PRINTFORMW 「你，向我发誓忠诚！」
		;TranslatedMark 「私に忠誠を誓いなさい！」
		PRINTL 
		PRINTFORML 「追求你的，是高贵的吸血鬼。心怀感激地接受吧」
		;TranslatedMark 「高貴な吸血鬼である私の求めよ。感謝して受けなさい」
	ENDIF

;─────────────────────────────────────── 
;○二回目以降
;─────────────────────────────────────── 
ELSE

	;───────────────────────────────────── 
	;▼虚ろ
	;───────────────────────────────────── 
	IF TALENT:レミリア:空虚
		PRINTFORML 「……嗯……嗯……嗯……」
		;TranslatedMark 「……う……ぅう……ん……」
		PRINTFORMDL %ANAME(レミリア)%带着空虚的目光接近了……
		;TranslatedMark %ANAME(レミリア)%は虚ろな瞳で近付いてきた……
		WAIT
		RESETCOLOR
		RETURN 0
	ENDIF

	;───────────────────────────────────── 
	;▼通常
	;───────────────────────────────────── 
	IF IS_SLAVE(レミリア) || IS_LOVER(レミリア)
		PRINTDATA
			DATAFORM 「我来教训你了。
			;TranslatedMark 「躾するわ。
			DATAFORM 「惩罚你。
			;TranslatedMark 「お仕置きよ。
			DATAFORM 「咱们来做出审判吧吧。
			;TranslatedMark 「裁判ごっこするわよ。
			DATAFORM 「玩娃娃吧。%CALLNAME_K10(レミリア_対象)%是人偶。
			;TranslatedMark 「お人形遊びしましょ。%CALLNAME_K10(レミリア_対象)%がお人形ね。
		ENDDATA
		PRINTDATAL
			DATAFORM 那么，开始吧」
			;TranslatedMark さ、始めましょ」
			DATAFORM 感谢你没有被我抛弃」
			;TranslatedMark 私に見捨てられていないことを感謝しなさい」
			DATAFORM 谢谢，什么？」
			;TranslatedMark ありがとうございます、は？」
		ENDDATA
	ELSE
		PRINTDATAL
			DATAFORM 「那么，今天就拜托你了」
			;TranslatedMark 「じゃ、今日こそよろしくね」
			DATAFORM 「快点点头的话马上就结束了哦？」
			;TranslatedMark 「さっさと頷けばすぐ終わるのよ？」
		ENDDATA
	ENDIF

ENDIF

;終了
WAIT
RESETCOLOR
RETURN 0

;─────────────────────────────────────── 
;●「捕虜逆調教(通常)」終了
