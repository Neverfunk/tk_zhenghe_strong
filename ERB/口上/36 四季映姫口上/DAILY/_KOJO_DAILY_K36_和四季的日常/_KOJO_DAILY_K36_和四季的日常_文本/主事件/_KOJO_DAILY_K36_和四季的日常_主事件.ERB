@K36_NEVERMIND_MAIN_GETEVENTID
    ;本来想扩展IFRAND加个权重来随机事件的……摸了
    #DIM EVENT_ID
    #DIM DYNAMIC EVENT_ID_LIST,100
    #DIM DYNAMIC EVENT_ID_RATE,100
    #DIM DYNAMIC EVENT_ID_NUM
    #DIM DYNAMIC TOTAL_RATE
    FOR EVENT_ID,1,120
        TRYCCALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}_EXIST
            ;是否能触发
            CALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}_STATUS
            SIF !RESULT
                CONTINUE
            ;触发几率
            CALLFORM K36_NEVERMIND_EVENT_{EVENT_ID}_RATE
            IF RESULT > 0
                EVENT_ID_LIST:EVENT_ID_NUM = EVENT_ID
                EVENT_ID_RATE:EVENT_ID_NUM = RESULT
                TOTAL_RATE += RESULT
                EVENT_ID_NUM++
            ENDIF
        CATCH
        ENDCATCH
    NEXT
    IF TOTAL_RATE > 0
        LOCAL:1 = RAND:TOTAL_RATE
        LOCAL = 0
        EVENT_ID_NUM = 0
        WHILE 1
            IF INRANGE(LOCAL:1,LOCAL,LOCAL + EVENT_ID_RATE:EVENT_ID_NUM - 1)
                RETURN EVENT_ID_LIST:EVENT_ID_NUM
            ELSE
                LOCAL += EVENT_ID_RATE:EVENT_ID_NUM
                EVENT_ID_NUM++
            ENDIF
        WEND
    ENDIF
    RETURN 0

