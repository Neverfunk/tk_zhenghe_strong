@SLG_DIPLOMACY_CREATE_UNION(勢力, 相手勢力)
#DIM 勢力
#DIM 相手勢力
#DIM 参加勢力数
#DIM 勢力君主
#DIM 相手勢力君主
#DIM 参加フラグ, MAX_COUNTRY
#DIM CONST 理由_嫌い = 1
#DIM CONST 理由_経済 = 2
