    CALL SET_SHIKIEIKI_FACE(四季_衣服_睡衣,四季_感情_爱意,四季_额外_清空,四季_额外_害羞)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「梦见了……我忘了……」")
