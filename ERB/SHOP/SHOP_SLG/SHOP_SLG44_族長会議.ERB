	PRINTL 
ELSEIF CHANGE_Government_GOBLIN:1 != 2
	PRINTBUTTON "[5] 出去掠夺", 5
	PRINTL 
ENDIF


CALL SINGLE_DRAWLINE
PRINTBUTTON "1000[取消]", 1000
PRINTL 

