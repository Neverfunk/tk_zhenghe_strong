@CHECK_BUILDING_FUNCTION_金融大厦(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    IF TMP_BUILDING_EXIST_FLAG:(COUNTRY_ID):建造物_金融大厦 == 1
        RESULT:0 = 1
        RESULT:1 = 2000

    ENDIF

    RETURNF RESULT:0

