;資金不足ならだめ
IF SKILL_FORGET_PRICE > MONEY && !編集モード
	PRINTFORMW (資金不足)
	RETURN
ENDIF

;該当スキルの習得判定
IF SKILL_NO_SLOT:対象:ジャンル:スキル < 0 || SKILL_ID_SLOT:対象:ジャンル:スキル < 0
	PRINTFORML (無法忘卻這個技能)
