@SLG_BUILDING_ADD_CITY_DEFEND_RATE(CITY_ID)
    #FUNCTION
    #DIM ADD_RATE
    #DIM CITY_ID
    #DIM COUNTRY_ID
    COUNTRY_ID = CITY_OWNER:CITY_ID
    ADD_RATE = 0
    SIF !IS_COUNTRY(COUNTRY_ID)
      RETURNF 0
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_大本营) > 0
      ADD_RATE += 7
    ENDIF

    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_博丽结界) > 0
      ADD_RATE += 30
    ENDIF

    IF BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_博丽结界 == CITY_ID
      ADD_RATE += 100
    ENDIF
    RETURNF ADD_RATE
