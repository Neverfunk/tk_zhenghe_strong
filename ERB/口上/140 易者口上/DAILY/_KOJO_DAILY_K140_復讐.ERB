#DIM 対象
#DIM 霊夢

霊夢 = NAME_TO_CHARA("霊夢")

SIF 霊夢 == -1 || 霊夢 == MASTER
	RETURN 0

SIF GROUPMATCH(MASTER, NAME_TO_CHARA("霊夢"))
	RETURN 0

SIF IS_FALLEN(霊夢)
	RETURN 0

SIF CFLAG:霊夢:捕虜先 != CFLAG:MASTER:所属
	RETURN 0

SIF KDVAR:対象:易者_復讐
	RETURN 0

RETURN CHECK_KOJO_DAILY_HAPPEN(対象, 1, 0) && CHECK_KOJO_DAILY_HAPPEN(霊夢, 0, 1)

