@SLG_BUILDING_TURNEND_CHANGE_RELATION()
    #DIM COUNTRY_ID
    #DIM ANOTHER_COUNTRY_ID
    #DIM CHARA_ID
    FOR COUNTRY_ID,0,MAX_COUNTRY
        SIF !IS_COUNTRY(COUNTRY_ID)
            CONTINUE
        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_短波电台) > 0
            FOR ANOTHER_COUNTRY_ID,0,MAX_COUNTRY
                SIF COUNTRY_ID != ANOTHER_COUNTRY_ID
                    CONTINUE
                CALL CHANGE_RELATION_C_TO_O(COUNTRY_ID, GET_COUNTRY_BOSS(COUNTRY_ID), RAND(3, 15), RAND(1, 5)*-1)
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_短波电台_1(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_长波电台) > 0
            FOR CHARA_ID,0,CHARANUM
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, RAND(10, 20), RAND(10, 30)*-1)
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_长波电台_1(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_旧淫腐街) > 0
            FOR CHARA_ID,0,CHARANUM
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(20, 50), RAND(20, 50))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_旧淫腐街_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_合法性机构) > 0 && COUNTRY_ID == CFLAG:MASTER:所属
            FOR CHARA_ID,0,CHARANUM
                SIF CFLAG:CHARA_ID:所属 == CFLAG:MASTER:所属
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(10, 25), RAND(10, 25))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_合法性机构_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_事迹宣传台) > 0 && COUNTRY_ID == CFLAG:MASTER:所属
            FOR CHARA_ID,0,CHARANUM
                SIF CFLAG:CHARA_ID:所属 == CFLAG:MASTER:所属
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(10, 25), RAND(10, 25))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_事迹宣传台_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_梦境暗示仪) > 0 && COUNTRY_ID == CFLAG:MASTER:所属
            FOR CHARA_ID,0,CHARANUM
                SIF CFLAG:CHARA_ID:所属 == CFLAG:MASTER:所属
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(10, 25), RAND(10, 25))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_梦境暗示仪_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_和平部) > 0 && COUNTRY_ID == CFLAG:MASTER:所属
            FOR CHARA_ID,0,CHARANUM
                SIF CFLAG:CHARA_ID:所属 == CFLAG:MASTER:所属
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(20, 50), RAND(20, 50))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_和平部_2(COUNTRY_ID)
        ENDIF


        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_真理部) > 0 && COUNTRY_ID == CFLAG:MASTER:所属
            FOR CHARA_ID,0,CHARANUM
                SIF CFLAG:CHARA_ID:所属 == CFLAG:MASTER:所属
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(20, 50), RAND(20, 50))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_真理部_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_友爱部) > 0 && COUNTRY_ID == CFLAG:MASTER:所属
            FOR CHARA_ID,0,CHARANUM
                SIF CFLAG:CHARA_ID:所属 == CFLAG:MASTER:所属
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(100, 150), RAND(120, 150))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_友爱部_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_噩梦发生器) > 0 && IS_SP_COUNTRY(COUNTRY_ID)
            BUILDING_TEXT = BUILDING_TEXT_噩梦发生器_2(COUNTRY_ID)
            FOR CHARA_ID,0,CHARANUM
                SIF TALENT:CHARA_ID:特殊勢力陥落系 != 0
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(300, 450), RAND(120, 150))
            NEXT

        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_“快乐”所) > 0 && IS_SP_COUNTRY(COUNTRY_ID)
            FOR CHARA_ID,0,CHARANUM
                SIF TALENT:CHARA_ID:特殊勢力陥落系 != 0
                    CONTINUE
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(300, 450), RAND(120, 150))
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_“快乐”所_2(COUNTRY_ID)
        ENDIF

        IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_永远亭药业) > 0
            FOR CHARA_ID,0,CHARANUM
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, RAND(50, 60), RAND(40, 50)*-1)
            NEXT
            BUILDING_TEXT = BUILDING_TEXT_永远亭药业_1(COUNTRY_ID)
        ENDIF
        IF BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_红雾发生器 > 0
            FOR CHARA_ID,0,CHARANUM
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(50, 100), RAND(60, 120))
            NEXT
        ENDIF
        IF BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_要石 > 0
            FOR CHARA_ID,0,CHARANUM
                CALL CHANGE_RELATION_O_TO_C(CHARA_ID, COUNTRY_ID, -1* RAND(50, 100), RAND(60, 120))
            NEXT
        ENDIF
    NEXT
