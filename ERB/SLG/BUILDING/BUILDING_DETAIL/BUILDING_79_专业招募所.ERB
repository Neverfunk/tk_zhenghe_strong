@CHECK_BUILDING_FUNCTION_专业招募所(CITY_ID,COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM CITY_ID
    IF CITY_ID != -1
        COUNTRY_ID = CITY_OWNER:CITY_ID
        RESULT:2 = GET_CITY_BUILDING_NUM(CITY_ID,建造物_专业招募所)
    ENDIF
    SIF !CHECK_BUILDING_SP_COUNTRY_LIMIT_USING(COUNTRY_ID,建造物_专业招募所)
        RETURNF RESULT:0
    RESULT:1 = TMP_BUILDING_CNT:COUNTRY_ID:建造物_专业招募所
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

