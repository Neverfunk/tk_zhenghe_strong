@SLG_BUILDING_DIPLOMACY_SEXTALK_ADDINCOME(ADD_RELATION)
    #FUNCTION
    #DIM ADD_RELATION
    #DIM COUNTRY_ID
    COUNTRY_ID = CFLAG:MASTER:所属
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_谈论间) > 0
        ADD_RELATION = ADD_RELATION * 200 / 100
        BUILDING_TEXT = BUILDING_TEXT_谈论间(COUNTRY_ID)
    ENDIF
    RETURNF ADD_RELATION

@SLG_BUILDING_DIPLOMACY_SEXTALK_CHANGE_从属依存(CHARA_ID)
    #DIM CHARA_ID
    #DIM COUNTRY_ID
    COUNTRY_ID = CFLAG:MASTER:所属
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_愉悦间) > 0
        CFLAG:CHARA_ID:従属度 += RAND(30,100)
        CFLAG:CHARA_ID:依存度 += RAND(10,30)
        BUILDING_TEXT = BUILDING_TEXT_愉悦间(COUNTRY_ID)
    ENDIF


