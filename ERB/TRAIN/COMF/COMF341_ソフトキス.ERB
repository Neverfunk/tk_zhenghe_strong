@COM_ABLE341
;共通部分
CALL COM_ABLE_COMMON(341)
SIF RESULT == 0
	RETURN 0
;主人公以外が実行する場合、好感度が800以上必要
SIF MPLY:0 != MASTER && CFLAG:(MPLY:0):2 < 800
	RETURN 0
;怪我なら不可
SIF CFLAG:(MTAR:0):行動不能状態 == 3
	RETURN 0
;ディープキス中は不可
SIF IS_EQUIP(MPLY:0, 342)
	RETURN 0
