    SIF K36_和四季的日常_四季好感度 < 10
        RETURN 0
    RETURN 1

@K36_SP_ENEVT_1_NAME
    ; CLEARLINE 1
    ; CALL KOJO_DAILY_START("")
    RETURN 1

@K36_SP_ENEVT_1
    CALL K36_NORMAL_SENTENCE_IMAGE(@"吃完午饭的%ANAME(MASTER)%前去看望%K36_CALL_四季大人()%")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%到达办公室时，%ANAME(四季_ID)%正在协调着国内的事务")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空,四季_额外_害羞)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「啊……是%K36_CALL_MASTER()%！」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空,四季_额外_害羞)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「有空的话就过来帮忙吧？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「好！」",1)
    CALL K36_一段时间后_IMAGE
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_爱意,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「说起来上次来的那几个妖精还没有分配工作吧？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「是的……似乎也不太好分配呢。」",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「她们并没有什么特别的能力。」",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「风和雨，还有一个是泥石流……」",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「不过并不会用符卡……所以基本不用指望可以战斗」",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「嘛，总是能找到用武之地的。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_睡着,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「而且是妖精的话放着不管肯定会出乱子的……我想想……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「确实不太好想呢……要不反过来想想。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「现在还有什么工作还缺人手？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「嗯……大多都是体力活……看起来不太能行……」",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「话说回来让妖精干脑力活也不行吧！」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「头疼……」",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_担忧,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「总之……养着吧……先分配给下面的人。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「风和雨先给农业主管，以后天气不好的话或许有用。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「但是泥石流……以后要攻打山区倒是可以分配给将领。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_戏谑,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「要不先让%ANAME(MASTER)%养着吧？%ANAME(MASTER)%应该不是那种连面都没见到就会对别人发情的人吧？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「养一只妖精……你就当我是那样的变态吧。」",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「啧——那就我先照顾着。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「可以请%ANAME(MASTER)%去帮我叫一下农业主管吗？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「当然！那我先走了。」",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「嗯。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"（没人要的小家伙……）")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"（总能找到你的用武之地的！）")
    CALL K36_NORMAL_SENTENCE_IMAGE_NOTICE(@" %ANAME(四季_ID)%习得了技能《各司其职》")
    CALL SKILL_LEARN_BY_NAME(四季_ID, スキル_ジャンル_PERSONAL, NO:四季_ID, "各司其职")
    RETURN 1
