    FOR LOCAL,1,CHARANUM
        IF IS_TOHO_CHARA(LOCAL)
            LOCAL:1 = GET_ID(LOCAL)
            MRU_3_记录恋慕:(LOCAL:1) = MRU_3_记录恋慕:(LOCAL:1) || TALENT:(LOCAL:1):恋慕
            MRU_3_记录服从:(LOCAL:1) = MRU_3_记录服从:(LOCAL:1) || TALENT:(LOCAL:1):服従
        ENDIF
    NEXT
;---------------------
;发生判定
;1可以发生，0不能发生
;---------------------
@EVENT_DAILY_NO_FUTURE_FOR_TRAITOR_DECISION()
    SIF !IS_MALE(MASTER)
        RETURN 0
    SIF !IS_COUNTRY(CFLAG:MASTER:所属)
        RETURN 0
    SIF !TALENT:MASTER:君主的器量
        RETURN 0
    RETURN 1

