;ENG = AKYUU_DAILY
;---------------------
;基本的な発生確率(1000分率 100で10%)
;これにコンフィグ項目の発生頻度がかけられるので、必ずしもこの通りにはならない
;---------------------
@KOJO_DAILY_K48_AKYUU_DAILY_RATE(対象)
#DIM 対象
RETURN 400


;---------------------
;確率以外の発生判定
;〇期以降になると発生するとか、デイリー側で利用している変数が-1だったら起こさない　みたいなはじき方をするときに使う
;---------------------
@KOJO_DAILY_K48_AKYUU_DAILY_DECISION(対象)
	#DIM 対象
	SIF CFLAG:対象:好感度 < 600
		RETURN 0
	SIF ABL:対象:知略 < 75 || ABL:対象:政治 < 75
		RETURN 0
	SIF TALENT:対象:空虚 || TALENT:対象:崩壊
		RETURN 0
	RETURN CHECK_KOJO_DAILY_HAPPEN(対象, 1, 0, 1)

;---------------------
;ジャンル
;コンフィグ設定で使用
;---------------------
@KOJO_DAILY_K48_AKYUU_DAILY_GENRE(対象)
#DIM 対象
RETURN デイリー_ジャンル_エロ

;---------------------
;本体
;イベントが発生した場合は1、発生しなかった場合は0を返す
;発生しなかったというのは例えば、特定条件を満たすキャラからランダムに一人選ぶデイリーで、そもそもその条件を満たすキャラが一人もいないみたいなとき
;旧仕様で作ったことある人向けにいうと「旧仕様のデイリー本体冒頭で-1を返すような状況」
;---------------------
@KOJO_DAILY_K48_AKYUU_DAILY(対象)
	#DIM 対象
	IF CFLAG:対象:好感度 < 1500
		CALL EVENT_3_1(対象)
	ELSE
	ELSE
	ENDIF

@EVENT_3_1(対象)
	PRINTFORML 手下有人说%ANAME(対象)%过来拜访，说想见一见%ANAME(MASTER)%
	WAIT
	PRINTFORML 嗯？%ANAME(対象)%么，是那个给幻想乡写史记的小姑娘啊
	PRINTFORML 之前因为取材的事情有认识，还挺聊的来的，这次又来做什么呢
	WAIT
	PRINTFORML ...允许%ANAME(対象)%进来了
	PRINTFORML 还是那个病弱的少女，她鞠了个躬，先说了些客套话，然后讲起了自己的来意
	WAIT
	CALL K48_AKYUU_SAY(@"「您好，我是%NAME_FORMAL(TARGET)%，希望您对我还有印象」")
	CALL K48_AKYUU_SAY(@"「之前有采访您有关对幻想乡现在局势与未来发展的情况，我对于您所说的这些部分非常感兴趣」")
	CALL K48_AKYUU_SAY(@"「可以能再聊一下么」")
	CALL ASK_YN("同意","拒绝")
	IF RESULT == 0
		PRINTFORML 这也没什么不好的，说不定能提高自己在史记里的形象
		CALL K48_AKYUU_SAY(@"「好的，谢谢您」")
		PRINTFORML 然后谈论了很多有关幻想乡从前的社会环境与和平生活..
		WAIT
		PRINTFORML 还谈论了非常多的关于现在各方势力的问题..
		CALL K48_AKYUU_SAY(@"「非常感谢您能接受采访」")
		PRINTFORML 天色渐渐暗了
		CALL K48_AKYUU_SAY(@"「天色不早了，我就不多打搅了」")
		PRINTFORML %ANAME(対象)%抱着记事的本子离开了，%ANAME(MASTER)%则让人帮忙把%ANAME(対象)%送回家了
		WAIT
	ELSE
	ENDIF
@EVENT_3_2(対象)
