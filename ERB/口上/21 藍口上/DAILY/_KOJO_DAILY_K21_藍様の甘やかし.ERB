SIF !((IS_LOVER(対象) || IS_SLAVED_BY(対象)) && TALENT:対象:合意)
	RETURN 0

;ペニスがないと駄目
SIF !HAS_PENIS(MASTER)
	RETURN 0
	
;対象が女でないとだめ
SIF !IS_FEMALE(対象)
	RETURN 0
	
;終わってたら発生しない
SIF KDVAR:対象:藍_甘やかし == -1
	RETURN 0
	
