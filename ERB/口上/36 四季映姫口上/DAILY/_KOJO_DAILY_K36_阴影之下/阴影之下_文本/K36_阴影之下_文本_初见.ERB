@四季映姫_阴影之下_初见_1
    IF !CFLAG:四季_ID:面識
        IF GET_COUNTRY_BOSS(CFLAG:四季_ID:所属) == 四季_ID
            CALL K36_NORMAL_SENTENCE_IMAGE(@"刚成为这个国家官员的%ANAME(MASTER)%受到了君主的召唤")
        ELSE
            CALL K36_NORMAL_SENTENCE_IMAGE(@"刚成为这个国家官员的%ANAME(MASTER)%受到了另一位似乎是管事的官员召唤")
        ENDIF
        CALL K36_NORMAL_SENTENCE_IMAGE(@"不过听说她可是出了名的严厉，就这样去的话说不定会被大骂一通呢",1)
        CALL K36_NORMAL_SENTENCE_IMAGE(@"要去吗？")
        CALL K36_NORMAL_SENTENCE_IMAGE_BUTTON(@"去",1)
        CALL K36_NORMAL_SENTENCE_IMAGE_BUTTON(@"不去",0)
        INPUT
        CLEARLINE 1
        IF RESULT == 0
            CALL K36_NORMAL_SENTENCE_IMAGE(@"不想受无妄之灾，还是别去了")
            CALL K36_NORMAL_SENTENCE_IMAGE(@"摸了！")
            WAIT
            CALL K36_NORMAL_SENTENCE_IMAGE(@"就这样悠闲地度过了一个上午……")
            CALL K36_一段时间后_IMAGE
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「你是%ANAME(MASTER)%吧？」")
            CALL K36_NORMAL_SENTENCE_IMAGE(@"下午的时候，正走在据点内的%ANAME(MASTER)%突然被背后的一位少女叫住了")
            CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_维持上次)
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我是%ANAME(四季_ID)%。」")
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那么……」")
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「希望你能明白，在乱世之中，能依靠的只有你自己的力量。」")
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「所谓的责任，权利，施舍……共情，都是强者为弱者建起的乐园。」")
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%ANAME(MASTER)%觉得，自己是哪种人呢？」")
            CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_睡着,四季_额外_维持上次)
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
            CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_维持上次)
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「你或许会觉得我太严厉了……」")
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……希望未来的你能在光明之处抱怨我的严厉，而不是在尸堆里感叹命运的无常。」")
            CALL K36_SHIKIEIKI_SAY_IMAGE(@"「时间不多了，请自勉吧，以上。」")
            CALL K36_NORMAL_SENTENCE_IMAGE(@"说完这些话的%ANAME(四季_ID)%点了点头，离开了")
            CALL K36_NORMAL_SENTENCE_IMAGE(@"还是被教训了一通啊")
            WAIT
            CALL K36_一段时间后_IMAGE
            CALL MRU_event_set_next_phase("K36_1",K36_1_PHASE,"STOP1")
            KDVAR:四季_ID:四季映姫_阴影之下_进度 = -1
        ENDIF
        CALL K36_一段时间后_IMAGE
        CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%走进了宫殿的办公处，发现坐在主位上的是一位少女")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_维持上次)
        CALL KOJO_36_IMAGE
        CALL K36_NORMAL_SENTENCE_IMAGE(@"看起来非常年轻……在幻想乡可不能以外貌猜测年龄")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"在巨椅的衬托下，少女显得非常渺小")
        WAIT
        CALL K36_NORMAL_SENTENCE_IMAGE(@"反而让少女肃穆的神情如同镶嵌在黑绒上的钻石那样显眼")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"她眼神中流露的疲态让%ANAME(MASTER)%心神一颤")
        WAIT
        CALL K36_NORMAL_SENTENCE_IMAGE(@"少女看到了走来的%ANAME(MASTER)%，站了起来")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「啊，是新来的人呢！」")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_害羞)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「先请教一下您的名字。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%ANAME(MASTER)%吗，我知道了。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%很熟练地叫出了%ANAME(MASTER)%的名字，看起来已经有所准备了")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"或许是在准备谈话的时候就已经试着读过了")
        WAIT
        CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_普通,四季_额外_清空)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我的名字是四季映姬·夜摩仙那度。叫我%ANAME(四季_ID)%就行」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「夜摩仙那度表明了我的职位：负责责审判死者的阎魔。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"……某种意义上，自己已经算死了一回吧？")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_害羞)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「哎呀，抖了一下呢。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「不用害怕呢。虽然是阎魔，但是现在我已经不负责那些『事务』了。」")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_普通,四季_额外_清空)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「因为现在的情况你也知道。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「整个幻想乡正在向战火的深渊坠落。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「所以我的任务暂且变成了维护这里和平。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「很高兴你能选择加入我们一起维护秩序，我们现在正急需你这样有能力又坚定的人来帮忙。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「大部分人都选择在这个不被规则束缚地时代放纵自己的欲望。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「规则是永远存在的，他们在死后会被惩罚的。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「不过我们得先确保他们会得到应有的死亡。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「任务会很繁重呢，这也是没有办法的事情，前路漫漫，你要做好心理准备。」")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_开心,四季_额外_维持上次)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「总之，好好努力吧，一起为了未来而奋斗。」")
        CALL 四季映姫_阴影之下_详谈
    ELSE
        CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_维持上次)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「啊，是%ANAME(MASTER)%，在这里的生活可好？」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「不知道%ANAME(MASTER)%现在是否有空？」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「上次见面时太匆忙了，这次想和%ANAME(MASTER)%仔细谈谈呢。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"在路上走着的时候被%ANAME(四季_ID)%叫住了")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"被拉着前往了%ANAME(四季_ID)%的办公室")
        WAIT
        CALL 四季映姫_阴影之下_详谈
    ENDIF
    CFLAG:四季_ID:面識 = 1
    RETURN 1

@四季映姫_阴影之下_详谈
    CALL K36_一段时间后_IMAGE
    IF CFLAG:四季_ID:面識
        CALL K36_NORMAL_SENTENCE_IMAGE(@"和%ANAME(四季_ID)%在简短的问候后谈论了一会现在幻想乡的局势……")
    ELSE
        CALL K36_NORMAL_SENTENCE_IMAGE(@"和%ANAME(四季_ID)%在简短的自我介绍后谈论了一会现在幻想乡的局势……")
    ENDIF
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%简单地对当前的局势发表了一些自己的见解，也对当前势力建设的方向提出了一些意见")
    WAIT
    CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_担忧,四季_额外_维持上次)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%ANAME(MASTER)%在这些方面很博学呢，比我那位不靠谱的下属好多了……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「而且，为人处世的方面也很不错。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_普通,四季_额外_维持上次)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那么，有没有兴趣更加紧密地来协助我呢？」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「并不是审判相关的工作啦，但是倒是和阎魔的身份相关。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……我总是能很清楚地知道一个人做了什么。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「但是呢，我却很难知道一个为什么要这么做。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我看着他们的所作所为，总觉得如同雾里探花一般……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「所以我想更多地了解一些人类，有个真实的人在旁边总是更好的。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「这是我的需求。当然了，这么做对%ANAME(MASTER)%来说也是有好处的。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「纵使有一身才华，但是没有适合的舞台也是发挥不出来的吧？」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「虽然事务会更多，但是相应的，%ANAME(MASTER)%能动用的资源也会更多。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我相信%ANAME(MASTER)%肯定也能从中接近自己想要的未来的。」")
    CALL K36_NORMAL_SENTENCE_IMAGE_NOTICE(@"如果答应的话，肯定会占用非常多的时间的吧？")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"要答应吗？")
    CALL K36_NORMAL_SENTENCE_IMAGE_BUTTON(@"答应",1)
    CALL K36_NORMAL_SENTENCE_IMAGE_BUTTON(@"还是算了",0)
    INPUT
    CLEARLINE 1
    IF RESULT == 1
        CALL K36_NORMAL_SENTENCE_IMAGE(@"「能帮到%K36_CALL_四季大人()%是我的荣幸呢。」")
        WAIT
        CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_维持上次,四季_额外_维持上次)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「真是的，不用这么客气啦！」")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_开心,四季_额外_维持上次)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那么，请多指教了，%ANAME(MASTER)%。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%看起来有些开心")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「呼……差不多该结束了呢。这是一些文件，请处理好再交给我。麻烦你了。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我也想看看%ANAME(MASTER)%具体的能力如何。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%递过来了一大份待处理的文件")
        CFLAG:四季_ID:好感度 += 200
        CALL MRU_event_set_next_phase("K36_1",K36_1_PHASE,"工作_1")
    ELSE
        CALL K36_NORMAL_SENTENCE_IMAGE(@"「我可能难以胜任这种职位呢。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%委婉地表达了拒绝")
        WAIT
        CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_睡着,四季_额外_维持上次)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
        CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_维持上次)
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「也是呢，一上来就加这么大的压力……」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「不过我相信%ANAME(MASTER)%是有能力做到的，还是不要妄自菲薄。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那么就请%ANAME(MASTER)%做好自己的本职工作。」")
        CALL K36_SHIKIEIKI_SAY_IMAGE(@"「在闲暇之余也别忘记提升自己。」")
        CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%看起来有些失落")
        CALL MRU_event_set_next_phase("K36_1",K36_1_PHASE,"STOP2")
    ENDIF
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_维持上次)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「工作上的事情就到此为止吧。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「如果在生活上有任何问题可以去麻烦%ANAME(小町_ID)%。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_生气,四季_额外_生气)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「反正只要不是工作上的事情她会很积极。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_维持上次,四季_感情_开心,四季_额外_维持上次)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那么，回见。」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%对%ANAME(MASTER)%点了点头")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"离开了%ANAME(四季_ID)%的办公室")
    WAIT

@四季映姫_阴影之下_初见_2
    #DIMS TMP_MASTER_NAME
    CALL K36_NORMAL_SENTENCE_IMAGE(@"先去找一下%ANAME(小町_ID)%吧")
    CALL K36_一段时间后_IMAGE
    IF CFLAG:小町_ID:面識
        CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_普通,小町_额外表情_无)
        CALL K35_ONOZUKA_SAY_IMAGE(@"「噢噢又是%ANAME(MASTER)%呢！」")
        TMP_MASTER_NAME '= @"%ANAME(MASTER)%"

    ELSE
        CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_普通,小町_额外表情_无)
        CALL K35_ONOZUKA_SAY_IMAGE(@"「噢噢是新来的人类呢！」")
        CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_开心,小町_额外表情_无)
        CALL K35_ONOZUKA_SAY_IMAGE(@"「我是小野塚小町，叫我%ANAME(小町_ID)%就行！」")
        TMP_MASTER_NAME '= @"你"
    ENDIF
    CALL K35_ONOZUKA_SAY_IMAGE(@"「已经见过%K36_CALL_四季大人()%了吧？」")
    CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_普通,小町_额外表情_无)
    CALL K35_ONOZUKA_SAY_IMAGE(@"「怎么样，没有给你太重的活吧？」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「有也不要紧，我教你怎么拖过去……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「实际上是%K36_CALL_四季大人()%来叫我找你的……」")
    WAIT
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%陈述着事实")
    CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_生气,小町_额外表情_无)
    CALL K35_ONOZUKA_SAY_IMAGE(@"「什么——！你这家伙，我还有很多事要做所以先走了回见……」")
    CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_普通,小町_额外表情_脸红)
    CALL K35_ONOZUKA_SAY_IMAGE(@"「原来只是生活上的事啊，%TMP_MASTER_NAME%不要搞这种大喘气啊。」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"上一秒还在准备逃跑的%ANAME(小町_ID)%危险地甩着镰刀用侧面地拍了一下%ANAME(MASTER)%")
    CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_普通,小町_额外表情_无)
    CALL K35_ONOZUKA_SAY_IMAGE(@"「这个简单，我指给你看啊。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「食堂在这栋楼里，浴场在那边的大房子，当然那里还有各种酒屋小店啥的。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「不过这里的享受的话随时会被%K36_CALL_四季大人()%抓到呢。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「要享乐的话还是得去外面，人里那里也有酒屋和浴场……」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「房间的话去找宿舍区的管理员说一声就行了，她会给你分配的。」")
    CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_开心,小町_额外表情_无)
    CALL K35_ONOZUKA_SAY_IMAGE(@"「像%TMP_MASTER_NAME%这样的职位，大概是能有独立的房间吧？」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「质量绝对够好，各种内设一应俱全。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「连最挑剔的鬼来了都会说好，更何况是柔弱的普通人类呢？哈哈哈哈……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%无奈地看着爽朗大笑着的%ANAME(小町_ID)%")
    CALL SET_ONOZUKA_FACE(小町_衣服_普通,小町_感情_普通,小町_额外表情_无)
    CALL K35_ONOZUKA_SAY_IMAGE(@"「工作的地方吗……」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「%ANAME(MASTER)%应该不会也是那种工作狂吧？」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「%K36_CALL_四季大人()%那里就是正经的办公区啦，但是千万别去那里。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「%K36_CALL_四季大人()%是个不顾他人的工作狂。去那里的唯一结局就是被当成苦力榨干。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「%TMP_MASTER_NAME%可别相信什么因果报应，未来的事情哪有现在重要。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「事情再这样下去，说不定哪天新地狱就解体了呢哈哈哈哈哈……」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「%TMP_MASTER_NAME%上班的时候就去我那里好了，我那里还蛮大的。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「至于工作嘛，每天定时向%K36_CALL_四季大人()%汇报一下糊弄过去就好了。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「那么说好了，明天就来我这里报道吧。」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%和%ANAME(小町_ID)%稍微聊了一会")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"算是吧？")
    CALL  K36_一段时间后_IMAGE
    CALL K35_ONOZUKA_SAY_IMAGE(@"「好了好了已经很晚了呢。我要去喝酒了，%TMP_MASTER_NAME%要一起去吗？」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「要熟悉一下附近？也是呢也是呢，毕竟是刚刚才来。」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「那么下次一定要去，不管要喝什么酒我都请你！」")
    CALL K35_ONOZUKA_SAY_IMAGE(@"「再见——」")
    CBGCLEAR
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(小町_ID)%一瞬间走到了很远的地方")
