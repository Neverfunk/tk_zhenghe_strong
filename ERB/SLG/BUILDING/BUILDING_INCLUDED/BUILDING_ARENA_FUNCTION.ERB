@LIFE_BUILDING_ADD_ARENA_INCOME(INCOME)
    #FUNCTION
    #DIM INCOME
    #DIM COUNTRY_ID
    COUNTRY_ID = CFLAG:MASTER:所属
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_竞技场转播点) > 0
        INCOME = INCOME * (100 + (RESULT:1) * 10) / 100
        BUILDING_TEXT = BUILDING_TEXT_竞技场转播点(COUNTRY_ID)
    ENDIF

    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_情色竞技场) > 0
        INCOME = INCOME * 200 / 100
        BUILDING_TEXT = BUILDING_TEXT_情色竞技场(COUNTRY_ID)
    ENDIF
    RETURNF INCOME

@LIFE_BUILDING_ARENA_DECREASE_JUDGEMENT(CHARA_ID)
    #DIM COUNTRY_ID
    #DIM CHARA_ID
    COUNTRY_ID = CFLAG:MASTER:所属
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,建造物_竞技场自媒体) > 0
        FOR COUNTRY_ID, 0, MAX_COUNTRY
            SIF !IS_COUNTRY(COUNTRY_ID) || GROUPMATCH(COUNTRY_ID, CFLAG:CHARA_ID:所属)
                CONTINUE
            CALL CHANGE_RELATION_C_TO_O(COUNTRY_ID,CHARA_ID, -100, 100)
        NEXT
        BUILDING_TEXT = BUILDING_TEXT_竞技场自媒体(COUNTRY_ID,CHARA_ID)
    ENDIF


