;-------------------------------------------------
@QuriltaiGOBLIN
#DIM 自勢力
#DIM 君主
#DIM 部隊編成可能フラグ
#DIM 部隊編成ナンバー
#DIM 残り任期
#DIM プレイヤー加算
#DIM 最終支持率, 999
#DIM 支持率暫定トップ
#DIM 支持率トップ
#DIM 応援対象
#DIM 要請対象
#DIM FIRST_LINE

CALL SET_GOBLIN_Approval_rate

自勢力 = CFLAG:MASTER:所属
君主 = GET_COUNTRY_BOSS(自勢力)
残り任期 = 3 - (DAY % 3)
SIF 残り任期 == 3
	残り任期 = 0

プレイヤー加算 = 0
FOR 要請対象, 0, CHARANUM
	SIF CFLAG:要請対象:所属 == CFLAG:MASTER:所属 && CFLAG:要請対象:捕虜先 != CFLAG:要請対象:所属 && 要請対象 != MASTER && CFLAG:要請対象:1711 && CFLAG:要請対象:1712 == MASTER
		プレイヤー加算 += CFLAG:要請対象:1709
NEXT

最終支持率:MASTER = CFLAG:MASTER:1709 + プレイヤー加算
FOR LOCAL, 0, CHARANUM
	IF CFLAG:LOCAL:所属 == CFLAG:MASTER:所属 && CFLAG:LOCAL:捕虜先 != CFLAG:LOCAL:所属 && LOCAL != MASTER
		最終支持率:LOCAL = CFLAG:LOCAL:1709
		SIF CFLAG:MASTER:1711 && CFLAG:MASTER:1712 == LOCAL
			最終支持率:LOCAL += 最終支持率:MASTER
	ELSEIF LOCAL != MASTER
		最終支持率:LOCAL = 0
	ENDIF
NEXT

支持率暫定トップ = -1
支持率トップ = -1
FOR LOCAL, 0, CHARANUM
	IF CFLAG:LOCAL:所属 == CFLAG:MASTER:所属 && CFLAG:LOCAL:捕虜先 != CFLAG:LOCAL:所属
		IF 支持率暫定トップ < 0
			支持率暫定トップ = LOCAL
		ELSEIF 最終支持率:LOCAL > 最終支持率:支持率暫定トップ
			支持率暫定トップ = LOCAL
		ENDIF
	ENDIF
NEXT
支持率トップ = 支持率暫定トップ

IF CHANGE_Government_GOBLIN:1 == 2
	部隊編成可能フラグ = 0
	部隊編成ナンバー = 0
	FOR LOCAL:0, 0, MAX_UNIT
		IF UNIT_SOLDIER:自勢力:(LOCAL:0) <= 0
			部隊編成可能フラグ = 1
			部隊編成ナンバー = LOCAL:0
			BREAK
		ENDIF
	NEXT
ENDIF

FIRST_LINE = LINECOUNT

CALL SINGLE_DRAWLINE
IF CHANGE_Government_GOBLIN:1 == 2
	PRINTL ★评议会
ELSE
	PRINTL ★族长会议
ENDIF
PRINTL 　管理内政
CALL SINGLE_DRAWLINE

PRINT 现在的
IF CHANGE_Government_GOBLIN:1 == 2
	PRINT 议长
ELSE
	PRINTL 族长
ENDIF
PRINTFORM [ %ANAME(君主)% ] 支持率[ {CFLAG:君主:1709} ] 
SIF  CFLAG:MASTER:1711 && CFLAG:MASTER:1712 == 君主
	PRINTFORM ＋ 加算[ {CFLAG:MASTER:1709 + プレイヤー加算} ] 
IF CHANGE_Government_GOBLIN:1 == 1
	PRINTFORM 任期[ 终身 ]
ELSE
	PRINTFORM 任期还有[ {残り任期} ]个回合
ENDIF

IF CHANGE_Government_GOBLIN:1 == 2
	PRINTFORML 集权性[ 分权体制 ]
ELSEIF CHANGE_Government_GOBLIN:1 == 1
	PRINTFORML 集权性[ 中央集权 ]
ELSE
	PRINTFORML 集权性[ {Centralization_power_GOBLIN} ]
ENDIF

PRINTFORM 支持率最高[ %ANAME(支持率トップ)% ] 支持率[ {CFLAG:支持率トップ:1709} ] 
IF CFLAG:MASTER:1711 && CFLAG:MASTER:1712 == 支持率トップ
	PRINTFORML ＋ 加算[ {最終支持率:MASTER} ] 
ELSE
	PRINTL 
ENDIF

SIF 君主 != MASTER
	PRINTFORM 你的支持率[ {CFLAG:MASTER:1709} ] ＋ 加算[ {プレイヤー加算} ] 

IF CFLAG:MASTER:1711
	PRINTFORML 支持[ %ANAME(CFLAG:MASTER:1712)% ]中
ELSE
	PRINTFORML 
ENDIF

PRINTL 
IF !STATUE_GOBLIN_COUNCIL:0
