;---------------------
@KOJO_DAILY_K75_DERIVATION_FROM_THE_DEEP_DECISION(対象)
#DIM 対象

;開始イベント前、終了イベント後ならだめ
SIF GROUPMATCH(KDVAR:対象:水蜜_仄暗い水の底から, 0, 2)
	RETURN 0
;滞在カウント残っててもだめ
SIF KDVAR:対象:水蜜_水底滞在カウント > 0
	RETURN 0

RETURN 1

