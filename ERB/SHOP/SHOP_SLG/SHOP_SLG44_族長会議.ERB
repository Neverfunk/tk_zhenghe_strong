$INPUT_LOOP
INPUT

IF RESULT == 1000
	REDRAW 1
	RETURN
	
ELSEIF RESULT == 1 && !STATUE_GOBLIN_COUNCIL:0
	CALL QuriltaiGOBLIN_MANAGE_PublicLavatory
ELSEIF RESULT == 2
