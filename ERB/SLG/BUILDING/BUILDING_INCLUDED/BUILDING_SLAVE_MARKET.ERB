
@SLG_BUILDING_ADD_SLAVE_MARKET_PRICE(PRICE)
    #FUNCTION
    #DIM 野盗_COUNTRY_ID
    #DIM PRICE
    野盗_COUNTRY_ID = GET_COUNTRY_FROM_ID(SP_COUNTRY_ID:特殊勢力_野盗)
    SIF !IS_COUNTRY(野盗_COUNTRY_ID)
        RETURNF PRICE
    SIF 野盗_COUNTRY_ID == CFLAG:MASTER:所属
        RETURNF PRICE
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,野盗_COUNTRY_ID,建造物_独占奴隶市场) > 0
        PRICE  = PRICE * (10+MIN(GET_SLAVE_MARKET_TOHO_NUM(),10))/10
    ENDIF
    RETURNF PRICE

@SLG_BUILDING_ADD_SELL_SLAVE_MARKET_MONEY(PRICE)
    #DIM 野盗_COUNTRY_ID
    #DIM PRICE
    野盗_COUNTRY_ID = GET_COUNTRY_FROM_ID(SP_COUNTRY_ID:特殊勢力_野盗)
    SIF !IS_COUNTRY(野盗_COUNTRY_ID)
        RETURN
    SIF 野盗_COUNTRY_ID == CFLAG:MASTER:所属
        RETURN
    IF CHECK_BUILDING_FUNCTION_SELECT(-1,野盗_COUNTRY_ID,建造物_独占奴隶市场) > 0
        MONEY:野盗_COUNTRY_ID += PRICE
        BUILDING_TEXT = BUILDING_TEXT_独占奴隶市场_1(野盗_COUNTRY_ID)
    ENDIF

@GET_SLAVE_MARKET_TOHO_NUM()
    #FUNCTION
    #DIM TOHO_NUM
    TOHO_NUM = 0
    FOR LOCAL, 0, VARSIZE("SLAVEMARKET_GOODS")
        LOCAL:1 = ID_TO_CHARA(SLAVEMARKET_GOODS:LOCAL)
        SIF LOCAL:1 == -1
            CONTINUE
        SIF !IS_TOHO_CHARA(LOCAL:1)
            CONTINUE
        TOHO_NUM ++
    NEXT
    RETURNF TOHO_NUM
