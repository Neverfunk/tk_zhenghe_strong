@get_sup_scale(chara)
    #FUNCTION
    #DIM chara
    #DIM scale
    SIF !check_chara(chara)
        RETURNF 0
    scale = GET_INFLUENCE_STAGE(GET_RP(chara))
    scale = MAX(1,scale)
    scale = MIN(6,scale)
    RETURNF scale

;获取支持者上限，10^影响力
@get_sup_upbound(chara)
    #FUNCTION
    #DIM chara
    RETURNF 10^get_sup_scale(rcharap)

;获取支持者下限，10^影响力-1,最少为10
@get_sup_lowbound(chara)
    #FUNCTION
    #DIM chara
    RETURNF MAX(10,10^get_sup_scale(chara)-1)

