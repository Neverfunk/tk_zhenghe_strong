@CHECK_BUILDING_FUNCTION_真理部(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    RESULT:1 = TMP_BUILDING_EXIST_FLAG:COUNTRY_ID:建造物_真理部
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_真理部_1(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F(COLOR_色情建筑)
    PRINTFORM 因为《真理部》的存在，
    PRINTFORML %ANAME(MASTER)%那无可置疑的正确已经被刻在社会的观念中
    PRINTFORML %ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%势力对%ANAME(MASTER)%的三感最少变为0
    RETURNF 1

