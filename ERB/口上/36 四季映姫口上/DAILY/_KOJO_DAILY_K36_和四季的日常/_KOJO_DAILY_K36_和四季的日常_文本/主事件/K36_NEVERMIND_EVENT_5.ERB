    CALL K36_NORMAL_SENTENCE_IMAGE(@"但似乎没什么用处",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%的哭声越来越凄惨了")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"有些着急的%ANAME(MASTER)%决定采取一些措施",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"……")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%强硬地把%ANAME(四季_ID)%拉开，随后重重地吻了上去",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_睡衣,四季_感情_接吻,四季_额外_清空,四季_额外_害羞)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「唔……唔啊……唔……」")
