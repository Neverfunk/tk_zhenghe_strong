@CHECK_BUILDING_FUNCTION_要石(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    SIF !CHECK_BUILDING_CHARA_LIMIT_USING(COUNTRY_ID,建造物_要石)
        RETURNF RESULT:0
    RESULT:1 = TMP_BUILDING_EXIST_FLAG:COUNTRY_ID:建造物_要石
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_SKILL_要石(COUNTRY_ID)
    #DIM COUNTRY_ID
    #DIM STATUS
    STATUS = BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_要石 > 0

    PRINTFORML 发动时永久生效，战斗前对敌方单位造成伤害；回合末降低他国的评价。
    PRINTFORM 当前状态：
    IF STATUS
        CALL COLOR_PRINTL("已开启",カラー_緑)
    ELSE
        CALL COLOR_PRINTL("已关闭",カラー_警告)
    ENDIF
    PRINTFORML 是否切换?
    CALL ASK_YN()
    IF !RESULT
        PRINTFORML 发动了《要石》的技能
        CALL BUILDING_SKILL_要石_FUNCTION(COUNTRY_ID)
    ENDIF
    PRINTFORMW 完毕

@BUILDING_TEXT_要石_SKILL(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 《要石》的技能生效了！
    PRINTFORML %ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的敌人受到了大量伤害
    RETURNF 1

@BUILDING_SKILL_要石_FUNCTION(COUNTRY_ID)
    #DIM COUNTRY_ID
    #DIM CITY_ID
    SIF !IS_COUNTRY(COUNTRY_ID)
        RETURN
    IF !BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_要石
        BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_要石 = 1
        BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:建造物_要石 = BUILDING_TIME_FOREVER
    ELSE
        BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_要石 = 0
        BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:建造物_要石 = 0
    ENDIF
