;-------------------------------------------------
;経済力を要求する
;-------------------------------------------------
@DIPLOMACY_REQUEST_ECONOMY(ARG:0)
LOCAL:4 = GET_COUNTRY_BOSS(CFLAG:MASTER:所属)
LOCAL:5 = GET_COUNTRY_BOSS(ARG:0)

PRINTFORMW %ANAME(MASTER)%要求%ANAME(LOCAL:5)%给自己経済力

CALL DIPLOMACY_REQUEST_COMMON(ARG:0, 250)
LOCAL:2 = RESULT
SIF LOCAL:2 <= 0
	RETURN 0

LOCAL:11 = GET_SUM_ECONOMY(ARG:0) / 20 / 100 * 100

;相手から自国にLOCAL:11だけ経済力を移動
LOCAL:11 = SLG_BUILDING_DIPLOMACY_CLAIM_INCOME(LOCAL:11)
CALL SHIFT_ECONOMY(ARG:0, CFLAG:MASTER:所属, LOCAL:11)

PRINTFORMW %ANAME(LOCAL:5)%给%ANAME(LOCAL:4)%「提供」了{LOCAL:11 / 100}経済力…

;跳转信仰事件
TRYCALL SHOP_LIFE_USERSHOP68_REQUEST(CFLAG:MASTER:所属,ARG:0,1,LOCAL:11/100)

;快楽で言うことを聞かせた場合、ご褒美の処理
SIF LOCAL:2 == 2
	CALL DIPLOMACY_REQUEST_PRIZE(ARG:0)
;薬物で言うことを聞かせた場合、ドラッグの処理
SIF LOCAL:2 == 3
	CALL DIPLOMACY_REQUEST_DRUG(ARG:0)
;催眠で言うことを聞かせた場合、催眠の処理
SIF LOCAL:2 == 4
	CALL DIPLOMACY_REQUEST_HYPNOSIS(ARG:0)
RETURN 1

