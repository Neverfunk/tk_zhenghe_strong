    CALL SET_SHIKIEIKI_FACE(四季_衣服_睡衣,四季_感情_开心,四季_额外_清空,四季_额外_害羞)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「唔……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「嘿嘿嘿……%ANAME(MASTER)%……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"有些迷糊的%ANAME(四季_ID)%又睡着了")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"今晚就抱着她睡吧……",1)
    CALL K36_一段时间后_IMAGE
    CALL K36_NORMAL_SENTENCE_IMAGE(@"第二天白天",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%似乎已经忘记了昨晚的插曲")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"开心的催促着%ANAME(MASTER)%快点起床",1)
