@COM_NAME50
LOCALS:0 = 绑带式假阳具
IF MTAR_NUM > 0
	RESULTS:0 = %LOCALS:0%装着(展示)
	RESULTS:1 = %LOCALS:0%装着(被役)
	RESULTS:2 = %LOCALS:0%装着(使役)
	RESULTS:3 = %LOCALS:0%装着(展示)(被动)
	RESULTS:4 = %LOCALS:0%装着(使役)
	RESULTS:5 = %LOCALS:0%装着(展示)
ELSE
	RESULTS:0 = %LOCALS:0%穿戴
ENDIF

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE50
;共通部分
CALL COM_ABLE_COMMON(50)
SIF RESULT == 0
	RETURN 0
;プレイヤーは1人以上必要
SIF MPLY_NUM <= 0
	RETURN 0
FOR LOCAL, 0, MPLY_NUM
	;プレイヤーが行動不能なら不可
	SIF !IS_PLAYABLE(MPLY:LOCAL) && !FLAG:RECHECKING
		RETURN 0
	;プレイヤーが拘束中なら不可
	SIF IS_BIND(MPLY:LOCAL)
		RETURN 0
	;プレイヤーに元から竿があるなら不可
	SIF HAS_PENIS(MPLY:LOCAL)
		RETURN 0
	;ペニスバンドが必要
	SIF ITEM:穿戴式假陰茎 == 0 && ITEM:A_穿戴式假陰茎 == 0
		RETURN 0
    ;already equipped
    SIF IS_EQUIP_PLAYER(MPLY:(LOCAL:0), 50)
		RETURN 0
NEXT
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM50
PRINTFORMW %ANAME(MPLY:0)%\@ MPLY_NUM > 1 ? 们 # \@装上了穿戴式假陰茎…

RETURN 1

