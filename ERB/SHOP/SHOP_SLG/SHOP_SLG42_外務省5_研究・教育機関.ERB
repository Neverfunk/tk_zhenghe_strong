	LOCAL:101 = 1
ELSE
	LOCAL:101 = 0
ENDIF

;特殊勢力が存在するとき
LOCAL:103 = 1
LOCAL:104 = 0
FOR LOCAL:0, 0, MAX_COUNTRY
	IF IS_SP_COUNTRY(LOCAL:0)
		LOCAL:103 = 0
		BREAK
	ENDIF
NEXT

FOR LOCAL:0, 0, 10
	IF LOCALS:(LOCAL:0) != ""
		PRINTL
		IF LOCAL:(LOCAL:0 + 100)
			SETCOLOR カラー_選択不可
