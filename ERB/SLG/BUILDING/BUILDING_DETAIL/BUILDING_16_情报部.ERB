@CHECK_BUILDING_FUNCTION_情报部(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    RESULT:1 = TMP_BUILDING_EXIST_FLAG:COUNTRY_ID:建造物_情报部 * 10
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_情报部(COUNTRY_ID,TARGET_COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM TARGET_COUNTRY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 因为《情报部》的存在，
    PRINTFORML %ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的敌人%ANAME(GET_COUNTRY_BOSS(TARGET_COUNTRY_ID))%技能发动率降低了！
    RETURNF 1

@BUILDING_TEXT_情报部_SKILL(COUNTRY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 《情报部》的技能生效了！
    PRINTFORML %ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%敌人的技能发动率大幅降低了！
    RETURNF 1

@BUILDING_SKILL_情报部(COUNTRY_ID)
    #DIM COUNTRY_ID
    PRINTFORML 发动后我方部队本回合作战时敌方技能触发率大幅降低
    PRINTFORML 冷却时间3回合
    PRINTFORML 是否发动
    CALL ASK_YN()
    IF !RESULT
        PRINTFORML 发动了《情报部》的技能
        CALL BUILDING_SKILL_情报部_FUNCTION(COUNTRY_ID)
        BUILDING_SKILL_COLDTIME:COUNTRY_ID:建造物_情报部 = 3
    ENDIF
    PRINTFORMW 完毕

@BUILDING_SKILL_情报部_FUNCTION(COUNTRY_ID)
    #DIM COUNTRY_ID
    #DIM CITY_ID
    SIF !IS_COUNTRY(COUNTRY_ID)
        RETURN
    BUILDING_SKILL_BUFF:COUNTRY_ID:建造物_情报部 = 1
    BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:建造物_情报部 = 1
