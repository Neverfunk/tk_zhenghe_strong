;--------------基本函数----------------
@MIRACLE_ITEM_0_NAME
	RESULTS = 神术等级上升

@MIRACLE_ITEM_0_TEXT
	RESULTS = (自动使用)神术等级+1 神术可在「习得技能」中学习

;道具价格
@MIRACLE_ITEM_0_COST
	RETURN 5000 * (CFLAG:MASTER:神术等级 +1)

;道具等级
@MIRACLE_ITEM_0_LEVEL
	RETURN FAITH_LEVEL:(CFLAG:MASTER:神术等级 +1 )

;最大持有个数
@MIRACLE_ITEM_0_MAX
	RETURN 1

;显示条件
@MIRACLE_ITEM_0_CHECK_SHOW
	RETURN CFLAG:MASTER:神术等级 < 5

;其他购买条件(除价格\等级\个数外)
@MIRACLE_ITEM_0_CHECK_BUY
	RETURN 1

;购买效果
@MIRACLE_ITEM_0_BUY

;使用条件
@MIRACLE_ITEM_0_CHECK_USE
	RETURN 1

;使用效果
@MIRACLE_ITEM_0_USE
	CFLAG:MASTER:神术等级 += 1

;-----------------特殊-----------------
@MIRACLE_ITEM_0_USENOW ;购买后自动使用

