FOR LOCAL, 0, CHARANUM
	;捕虜でなく、死んでおらず、苗床所持者の女で、1/3の確率
	IF !CFLAG:LOCAL:捕虜先 && CFLAG:LOCAL:特殊状態 != 特殊状態_死亡 && GETBIT(TALENT:LOCAL:淫乱系, 素質_淫乱_苗床) && IS_FEMALE(LOCAL) && !RAND:3 && IS_APPEAR(LOCAL)
