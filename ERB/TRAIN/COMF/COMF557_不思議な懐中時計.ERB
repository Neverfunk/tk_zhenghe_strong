@COM_NAME557
RESULTS:0 = 不可思議的懷表

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE557
;共通部分
CALL COM_ABLE_COMMON(557)
SIF RESULT == 0
	RETURN 0
;プレイヤーは最大で1人まで
SIF MPLY_NUM != 1
	RETURN 0
;プレイヤーに主人公が含まれる
SIF MPLY:0 != MASTER
	RETURN 0
;アイテムが必要
SIF ITEM:不可思議的懷表 <= 0
	RETURN 0

IF TFLAG:56 > 20 && GROUPMATCH(FLAG:調教モード, 調教_閨, 調教_捕虜調教)
	RETURN 0
ELSEIF TFLAG:56 > 10 && GROUPMATCH(FLAG:調教モード, 調教_会う, 調教_子育て)
	RETURN 0
ENDIF

RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM557

CALL COLOR_PRINTL("不可思議的懷表発揮了効果！", カラー_注意)
ITEM:不可思議的懷表 --

IF GROUPMATCH(FLAG:調教モード, 調教_閨, 調教_捕虜調教)
	TFLAG:56 += 10
ELSE
	TFLAG:56 += 5
ENDIF

TFLAG:55 --

RETURN 1

