@DQPRINT(ARGS, ARG:0 = 0, ARG:1)
#DIM 文字数
#DIM 検索数

LOCAL:0 = 0

IF ARG:1 == 0
	ARG:1 = 8
ENDIF
STRLENFORM %ARGS%
文字数 = RESULT:0
検索数 = 文字数 + 1

FOR LOCAL:0, 0, 検索数
	IF LOCAL:0 == 文字数
		IF ARG:0
			PRINTFORM %ARGS%
		ELSE
			REUSELASTLINE %ARGS%
		ENDIF
		WAIT
	ELSE
		SUBSTRING ARGS, 0, LOCAL:0
		REUSELASTLINE %RESULTS:0%
		TWAIT ARG:1, 1
	ENDIF
NEXT
IF ARG:0 == 0
	REUSELASTLINE 
ELSEIF ARG:0 == 2
	CLEARLINE 1
	CALL COLORMESSAGE(@"%ARGS%", 0x696969, 1)
ENDIF

@COLORMESSAGE(ARGS,色,表示形式,フォントスタイル)
