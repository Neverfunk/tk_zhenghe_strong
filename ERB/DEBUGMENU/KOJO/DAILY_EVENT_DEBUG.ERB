@DAILY_EVENT_DEBUG_DETAIL(KOJO_NAME)
    #DIMS KOJO_NAME
    #DIM EVENT_ID
    #DIM EVENT_NUM
    EVENT_NUM = VARSIZE("DAILY_EVENT_NAME_ENG", 1)
    EVENT_ID = -1
    FOR LOCAL, 0, EVENT_NUM
        IF KOJO_NAME == DAILY_EVENT_NAME_ENG:デイリー_通常:LOCAL
