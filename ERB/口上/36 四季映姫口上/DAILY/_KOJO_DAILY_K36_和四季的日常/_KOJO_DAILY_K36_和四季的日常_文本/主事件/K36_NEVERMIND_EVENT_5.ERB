    CALL K36_NORMAL_SENTENCE_IMAGE(@"晕乎乎的大脑终于让S平静了下来",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「做噩梦了吗？」",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_睡衣,四季_感情_普通,四季_额外_清空,四季_额外_害羞)
