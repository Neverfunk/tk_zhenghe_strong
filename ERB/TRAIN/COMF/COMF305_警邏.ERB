;警邏

;-------------------------------------------------
;コマンド名称
;------------------------------------------------
@COM_NAME305
RESULTS:0 = 出去警邏
RESULTS:1 = 被帯著去警邏

;-------------------------------------------------
;選択可否判定
;-------------------------------------------------
@COM_ABLE305
;共通部分
CALL COM_ABLE_COMMON(305)
SIF RESULT == 0
	RETURN 0
;捕虜会話では不可
SIF FLAG:調教モード == 6
	RETURN 0
;主人公がプレイヤーのとき限定
SIF MPLY:0 != MASTER
	RETURN 0
;デート中は無理
SIF TFLAG:54
	RETURN 0
;臨月、育児、怪我なら不可
SIF GROUPMATCH(CFLAG:(MTAR:0):行動不能状態, 1, 2, 3)
	RETURN 0
;捕虜なら不可
SIF CFLAG:(MTAR:0):捕虜先
	RETURN 0
;キス中は不可
SIF IS_EQUIP(MPLY:0, 342)
	RETURN 0
RETURN 1

;-------------------------------------------------
;メイン処理
;-------------------------------------------------
@COM305
;コマンドの成否をTFLAG:18にセット
CALL JUDGE_COM_RESULT(MTAR:0, 5, 5)

;固定で獲得するソース
SOURCE:(MTAR:0):歓楽 = 20

;親密に応じた歓楽のソース追加
CALL ADD_SOURCE_KANRAKU(MTAR:0, 160)

;このターンの経済成長パワー追加値
LOCAL:0 = (ABL:(MPLY:0):武闘 + ABL:(MTAR:0):武闘 + ABL:(MPLY:0):政治 + ABL:(MTAR:0):政治 + 200) * 25

;このターンの兵数増強パワー追加値
LOCAL:1 = (ABL:(MPLY:0):武闘 + ABL:(MTAR:0):武闘 + ABL:(MPLY:0):政治 + ABL:(MTAR:0):政治 + 200) * 2 / 5

;主導権に応じたソースの追加
CALL ADD_SOURCE_INITIATIVE_N(MPLY:0, 100, 100)
CALL ADD_SOURCE_INITIATIVE_N(MTAR:0, 100, 100)

;ターゲットがサボり魔なら効果減少
IF TALENT:(MTAR:0):懶散
	TIMES SOURCE:(MTAR:0):歓楽, 0.80
	SOURCE:(MTAR:0):反感 = 70 - SOURCE:(MTAR:0):歓楽 / 3
ENDIF

;失敗
IF TFLAG:18 == -1
	TIMES SOURCE:(MTAR:0):歓楽, 0.20
	SOURCE:(MTAR:0):不満 += 300
	TIMES LOCAL:0, 0.20
	TIMES LOCAL:1, 0.20
;成功
ELSEIF TFLAG:18 == 0
;大成功
ELSE
	TIMES SOURCE:(MTAR:0):歓楽, 2.00
	TIMES LOCAL:0, 2.00
	TIMES LOCAL:1, 2.00
ENDIF

SELECTCASE FLAG:経済成長追加値
	CASE IS > 100000
		TIMES LOCAL:0, 0.10
	CASE IS > 50000
		TIMES LOCAL:0, 0.25
	CASE IS > 25000
		TIMES LOCAL:0, 0.5
ENDSELECT

SELECTCASE FLAG:兵数増加追加値
	CASE IS > 3000
		TIMES LOCAL:1, 0.10
	CASE IS > 2000
		TIMES LOCAL:1, 0.25
	CASE IS > 1000
		TIMES LOCAL:1, 0.5
ENDSELECT

FLAG:経済成長追加値 += LOCAL:0
FLAG:兵数増加追加値 += LOCAL:1

;主導度変化基準値
TFLAG:49 = 2

;倒錯度変化基準値
TFLAG:50 = -1

RETURN 1

;-------------------------------------------------
;地の文(前文)
;-------------------------------------------------
@COM_TEXT_BEFORE305
;主導権が主人公側
IF IS_INITIATIVE(MASTER)
	PRINTFORMW %ANAME(MPLY:0)%和%ANAME(MTAR:0)%一起在街道進行了巡視
ELSE
	PRINTFORMW %ANAME(MPLY:0)%被%ANAME(MTAR:0)%帯著去街道上巡視了
ENDIF

IF TFLAG:18 == 1
	PRINTFORML 總覺得好像是約會般的気氛…
ELSEIF TFLAG:18 == -1
	PRINTFORML ……被巻入了糾紛中、遇到了很多麻煩
ENDIF
PRINTFORML (経済和兵数的増加量獲得了獎勵！)
