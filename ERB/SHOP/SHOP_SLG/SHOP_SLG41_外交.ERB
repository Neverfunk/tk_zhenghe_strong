		CITY_ECONOMY:(LOCAL:0) = MIN(CITY_ECONOMY:(LOCAL:0), CITY_ECONOMY_LIMIT:(LOCAL:0))
	ENDIF
	LOCAL:0 ++
WEND

LOCAL:5 = LOCAL:3 + ARG:2 - GET_SUM_ECONOMY(ARG:1)

