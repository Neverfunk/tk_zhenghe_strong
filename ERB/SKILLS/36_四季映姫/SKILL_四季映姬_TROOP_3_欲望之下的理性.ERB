@SKILL_36_TROOP_3_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
#DIM 発動者
#DIM 発動番号
#DIM スキル
#DIMS ジャンル
#DIM 発動側
#DIM 発動勢力
#DIM 発動部隊
#DIM 対象側
#DIM 対象勢力
#DIM 対象部隊
対象側 = !発動側
IF BATTLE_政治:発動側:発動番号 > RAND:100
    LOCAL = RAND:5000 + 1000
    CALL DECREASE_SOLDIER(対象勢力,対象部隊,LOCAL)
ENDIF
IF BATTLE_政治:発動側:発動番号 > RAND:110
    LOCAL = RAND:5000 + 1000
    CALL INCREASE_SOLDIER(対象勢力,対象部隊,LOCAL)
ENDIF
IF BATTLE_政治:発動側:発動番号 > RAND:120
    LOCAL = RAND:3000 + 1000
    CALL DECREASE_SOLDIER(対象勢力,対象部隊,LOCAL)
    CALL INCREASE_SOLDIER(対象勢力,対象部隊,LOCAL)
ENDIF

