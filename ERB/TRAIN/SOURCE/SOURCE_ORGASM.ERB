;SOURCE_CHECKで使用する関数(射精・絶頂・噴乳など)

;-------------------------------------------------
;絶頂に関する処理
;-------------------------------------------------
@SOURCE_ORGASM(ARG:0)
VARSET LOCAL, 0

;表示用
LOCALS:0 = Ｃ
LOCALS:1 = Ｖ
LOCALS:2 = Ａ
LOCALS:3 = Ｂ
LOCALS:4 = Ｍ
LOCALS:5 = Ｕ
;射精箇所表示用
LOCALS:6 =
;●絶頂の判定と表示
LOCAL:5 = 0
LOCAL:6 = 0
LOCAL:10 = 0
;射精関連の処理
LOCAL:15 = 0
FOR LOCAL:0, 0, 6
	LOCAL:2 = PALAM:(ARG:0):(LOCAL:0) + CUP:(ARG:0):(LOCAL:0)

	;絶頂した場合
	IF LOCAL:2 >= 10000
		IF LOCAL:10
			PRINT /
		ELSE
			IF !TFLAG:3
				TFLAG:3 = 1
				PRINTL
			ENDIF
			PRINTFORM %ANAME(ARG:0), MAX_CHARANAME_LENGTH, RIGHT%:
		ENDIF
		LOCAL:10 = 1

		;絶頂箇所の数を加算
		LOCAL:5 ++

		;絶頂強度に応じてNOWEXをセットし、メッセージの表示を行う
		IF LOCAL:2 >= 150000
			IF ARG:0 == MASTER
				SETCOLOR 0x800080
			ELSE
				SETCOLOR 0xFF4000
			ENDIF
			NOWEX:(ARG:0):(LOCAL:0) = 9
			PRINT 最強
			;最強絶頂箇所の数を加算
			LOCAL:6 ++
		ELSEIF LOCAL:2 >= 80000
			IF ARG:0 == MASTER
				SETCOLOR 0x6000FF
			ELSE
				SETCOLOR カラー_オレンジ
			ENDIF
			NOWEX:(ARG:0):(LOCAL:0) = 4
			PRINT 超強
		ELSEIF LOCAL:2 >= 30000
			IF ARG:0 == MASTER
				SETCOLOR 0x0080FF
			ELSE
				SETCOLOR 0xFFC000
			ENDIF
			NOWEX:(ARG:0):(LOCAL:0) = 2
			PRINT 強
		ELSE
			IF ARG:0 == MASTER
				SETCOLOR カラー_シアン
			ELSE
				SETCOLOR カラー_注意
			ENDIF
			NOWEX:(ARG:0):(LOCAL:0) = 1
		ENDIF
		PRINTFORM 絶頂%LOCALS:(LOCAL:0)%

		;絶頂経験を増やす
		EXP:(ARG:0):絶頂経験 += NOWEX:(ARG:0):(LOCAL:0)
		SIF TCVAR:(ARG:0):催眠中 > 0
			EXP:(ARG:0):催眠絶頂経験 += NOWEX:(ARG:0):(LOCAL:0)
	ENDIF
NEXT
RESETCOLOR

;●噴乳の判定と表示
LOCAL:2 = PALAM:(ARG:0):噴乳 + CUP:(ARG:0):噴乳

;噴乳した場合
IF LOCAL:2 >= 10000 && SOURCE:(ARG:0):快Ｂ + SOURCE:(ARG:0):快Ｖ + SOURCE:(ARG:0):快Ａ > 0
	IF LOCAL:10
		PRINT /
	ELSE
		IF !TFLAG:3
			TFLAG:3 = 1
			PRINTL
		ENDIF
		PRINTFORM %ANAME(ARG:0), MAX_CHARANAME_LENGTH, RIGHT%:
	ENDIF
	LOCAL:10 = 1

	;絶頂強度に応じてNOWEXをセットし、メッセージの表示を行う
	IF LOCAL:2 >= 300000
		IF ARG:0 == MASTER
			SETCOLOR 0x800080
		ELSE
			SETCOLOR 0xFF4000
		ENDIF
		NOWEX:(ARG:0):噴乳 = 9
		PRINT 超超大量
	ELSEIF LOCAL:2 >= 150000
		IF ARG:0 == MASTER
			SETCOLOR 0x6000FF
		ELSE
			SETCOLOR カラー_オレンジ
		ENDIF
		NOWEX:(ARG:0):噴乳 = 4
		PRINT 超大量
	ELSEIF LOCAL:2 >= 50000
		IF ARG:0 == MASTER
			SETCOLOR 0x0080FF
		ELSE
			SETCOLOR 0xFFC000
		ENDIF
		NOWEX:(ARG:0):噴乳 = 2
		PRINT 大量
	ELSE
		IF ARG:0 == MASTER
			SETCOLOR カラー_シアン
		ELSE
			SETCOLOR カラー_注意
		ENDIF
		NOWEX:(ARG:0):噴乳 = 1
	ENDIF
	PRINTFORM 噴乳
	RESETCOLOR

	EXP:(ARG:0):噴乳経験値 += NOWEX:(ARG:0):噴乳

	;触手搾乳中なら相手の妖術経験値をプラス
	IF SELECTCOM == 207 && IS_MTAR(ARG:0)
		FOR LOCAL:0, 0, MPLY_NUM
			EXP:(MPLY:(LOCAL:0)):妖術経験値 += NOWEX:(ARG:0):噴乳 * 2
		NEXT
	ELSEIF IS_EQUIP_TARGET(ARG:0, 207)
		LOCAL:1 = SEARCH_EQUIP(207, -1, ARG:0)
		IF LOCAL:1 >= 0
			FOR LOCAL:0, 0, MEQUIP_PLAYER_NUM:(LOCAL:1)
				EXP:(MEQUIP_PLAYER:(LOCAL:1):(LOCAL:0)):妖術経験値 += NOWEX:(ARG:0):噴乳 * 2
			NEXT
		ENDIF
	ENDIF
ENDIF

;●潮吹きの判定と表示
LOCAL:11 = 0
IF CONFIG:9 == 1 && NOWEX:(ARG:0):射精 == 0
	IF (NOWEX:(ARG:0):Ｃ絶頂 >= 2 || NOWEX:(ARG:0):Ｖ絶頂 >= 2) && PALAM:(ARG:0):潮吹 + CUP:(ARG:0):潮吹 >= 10000
		LOCAL:11 = 1
	ELSEIF (NOWEX:(ARG:0):Ｃ絶頂 >= 1 || NOWEX:(ARG:0):Ｖ絶頂 >= 1) && PALAM:(ARG:0):潮吹 + CUP:(ARG:0):潮吹 >= 20000
		LOCAL:11 = 1
	ENDIF
ENDIF

IF LOCAL:11
	IF LOCAL:10
		PRINT /
	ELSE
		IF !TFLAG:3
			TFLAG:3 = 1
			PRINTL
		ENDIF
		PRINTFORM %ANAME(ARG:0), MAX_CHARANAME_LENGTH, RIGHT%:
	ENDIF
	LOCAL:10 = 1

	IF ARG:0 == MASTER
		SETCOLOR 0x0080FF
	ELSE
		SETCOLOR 0xFFC000
	ENDIF
	PRINT 潮吹
	RESETCOLOR

	NOWEX:(ARG:0):潮吹 = 1

	SOURCE:(ARG:0):露出 += 100
	IF !HAS_VAGINA(ARG:0)
		SOURCE:(ARG:0):屈従 += 300
	ELSE
		SOURCE:(ARG:0):屈従 += 50
	ENDIF
ENDIF

;●おもらしの判定と表示
;絶頂・尿意限界によるおもらしの設定が有効の場合
IF CONFIG:90 == 1
	;尿意がある状態で絶頂強度の合計が4以上によるおもらし
	IF TCVAR:(ARG:0):54 >= 1500 && SUM_NOWEX(ARG:0, 1, 0) >= 4
		TCVAR:(ARG:0):0 = 1
	;尿意が高い状態で絶頂することによるおもらし
	ELSEIF TCVAR:(ARG:0):54 >= 3000 && SUM_NOWEX(ARG:0, 1, 0) >= 1
		TCVAR:(ARG:0):0 = 2
	;尿意の限界によるおもらし
	ELSEIF TCVAR:(ARG:0):54 >= 4000
		TCVAR:(ARG:0):0 = 3
	ENDIF
ENDIF

IF TCVAR:(ARG:0):0
	IF LOCAL:10
		PRINT /
	ELSE
		IF !TFLAG:3
			TFLAG:3 = 1
			PRINTL
		ENDIF
		PRINTFORM %ANAME(ARG:0), MAX_CHARANAME_LENGTH, RIGHT%:
	ENDIF
	LOCAL:10 = 1

	IF ARG:0 == MASTER
		SETCOLOR カラー_シアン
	ELSE
		SETCOLOR カラー_注意
	ENDIF
	IF TCVAR:(ARG:0):54 >= 3000
		PRINT 大量失禁
		TCVAR:(ARG:0):1 = 2
	ELSE
		PRINT 失禁
		TCVAR:(ARG:0):1 = 1
	ENDIF
	RESETCOLOR

	;尿残量を0にする
	TCVAR:(ARG:0):54 = 0

	;おもらしによる経験・ソースの追加
	EXP:(ARG:0):排泄経験値 += 1
	EXP:(ARG:0):失禁経験 += TCVAR:(ARG:0):1

	LOCAL:3 = 400

	SELECTCASE ABL:(ARG:0):排泄
		CASE 0
			TIMES LOCAL:3, 0.00
		CASE 1
			TIMES LOCAL:3, 0.10
		CASE 2
			TIMES LOCAL:3, 0.20
		CASE 3
			TIMES LOCAL:3, 0.40
		CASE 4
			TIMES LOCAL:3, 0.70
		CASEELSE
			LOCAL:3 = LOCAL:3 * (100 + (ABL:(ARG:0):排泄 - 5) * 2) / 100
	ENDSELECT

	SOURCE:(ARG:0):露出 += 300
	SOURCE:(ARG:0):逸脱 += 80
	SOURCE:(ARG:0):中毒充足 += LOCAL:3

	;主導権に応じた優越・屈従のソース追加
	CALL ADD_SOURCE_INITIATIVE_U(ARG:0, 20, 80)
ENDIF


;●射精の判定と表示
LOCAL:2 = PALAM:(ARG:0):射精 + CUP:(ARG:0):射精

;射精した場合
IF LOCAL:2 >= 10000 && SOURCE:(ARG:0):快Ｐ + NOWEX:(ARG:0):Ｖ絶頂 + NOWEX:(ARG:0):Ａ絶頂 > 0
	CALL PROCESS_EJACULATION(ARG:0, LOCAL:2, LOCAL:10)
	LOCAL:10 = 1
ENDIF


;●ソースの追加・気力の消耗
LOCAL:30 = 0
LOCAL:31 = 0
FOR LOCAL:0, 0, 8
	LOCAL:2 = 0
	LOCAL:3 = 0
	IF NOWEX:(ARG:0):(LOCAL:0) > 0
		;ソースの追加
		CALL ADD_SOURCE_ORGASM(ARG:0, LOCAL:0)

		;絶頂箇所に応じた基本消耗度の設定
		SELECTCASE LOCAL:0
			;Ｃ絶頂
			CASE 0
				LOCAL:2 = 15000
				LOCAL:3 = 8000
			;Ｖ絶頂
			CASE 1
				LOCAL:2 = 15000
				LOCAL:3 = 10000
			;Ａ絶頂
			CASE 2
				LOCAL:2 = 25000
				LOCAL:3 = 17000
			;Ｂ絶頂
			CASE 3
				LOCAL:2 = 10000
				LOCAL:3 = 8000
			;Ｍ絶頂
			CASE 4
				LOCAL:2 = 15000
				LOCAL:3 = 7000
			;Ｕ絶頂
			CASE 5
				LOCAL:2 = 15000
				LOCAL:3 = 8000
			;射精
			CASE 6
				LOCAL:2 = 15000
				LOCAL:3 = 10000
			;噴乳
			CASE 7
				LOCAL:2 = 20000
				LOCAL:3 = 10000
			;潮吹き
			CASE 8
				LOCAL:2 = 6000
				LOCAL:3 = 6000
		ENDSELECT

		;絶頂強度に基づく補正
		LOCAL:2 *= MAX(NOWEX:(ARG:0):(LOCAL:0) / 3, 1)
		LOCAL:3 *= MAX(NOWEX:(ARG:0):(LOCAL:0) / 3, 1)

		IF LOCAL == 6
			;射精による体力・気力の消耗を計算
			;射精Lvによる補正
			SELECTCASE ABL:(ARG:0):射精
				CASE 0
					TIMES LOCAL:2, 1.00
					TIMES LOCAL:3, 1.00
				CASE 1
					TIMES LOCAL:2, 0.80
					TIMES LOCAL:3, 0.60
				CASE 2
					TIMES LOCAL:2, 0.60
					TIMES LOCAL:3, 0.40
				CASE 3
					TIMES LOCAL:2, 0.45
					TIMES LOCAL:3, 0.25
				CASE 4
					TIMES LOCAL:2, 0.30
					TIMES LOCAL:3, 0.15
				CASEELSE
					LOCAL:2 = LOCAL:2 / (MIN(ABL:(ARG:0):射精 - 5, 55) + 5)
					LOCAL:3 = LOCAL:3 / (MIN(ABL:(ARG:0):射精 - 5, 55) * 2 + 10)
			ENDSELECT
		ENDIF

		IF LOCAL == 7
			;噴乳による体力・気力の消耗を計算
			;噴乳Lvによる補正
			SELECTCASE ABL:(ARG:0):噴乳
				CASE 0
					TIMES LOCAL:2, 1.00
					TIMES LOCAL:3, 1.00
				CASE 1
					TIMES LOCAL:2, 0.80
					TIMES LOCAL:3, 0.60
				CASE 2
					TIMES LOCAL:2, 0.60
					TIMES LOCAL:3, 0.40
				CASE 3
					TIMES LOCAL:2, 0.45
					TIMES LOCAL:3, 0.25
				CASE 4
					TIMES LOCAL:2, 0.30
					TIMES LOCAL:3, 0.15
				CASEELSE
					LOCAL:2 = LOCAL:2 / (MIN(ABL:(ARG:0):噴乳 - 5, 55) + 5)
					LOCAL:3 = LOCAL:3 / (MIN(ABL:(ARG:0):噴乳 - 5, 55) * 2 + 10)
			ENDSELECT
		ENDIF

			IF GETBIT(TALENT:(ARG:0):淫乱系, 素質_淫乱_雌牛)
				TIMES LOCAL:2, 0.5
				TIMES LOCAL:3, 0.25
			ENDIF

		;欲望Lvによる補正
		IF ABL:(ARG:0):欲望 < 5
			LOCAL:2 = LOCAL:2 * (30 - ABL:(ARG:0):欲望) / 30
			LOCAL:3 = LOCAL:3 * (15 - ABL:(ARG:0):欲望) / 15
		ELSE
			LOCAL:2 = LOCAL:2 * (130 - MIN(ABL:(ARG:0):欲望, 30)) / 150
			LOCAL:3 = LOCAL:3 * (45 - MIN(ABL:(ARG:0):欲望, 30)) / 60
		ENDIF
		LOCAL:30 += LOCAL:2
		LOCAL:31 += LOCAL:3
	ENDIF
NEXT

;●同時絶頂ボーナスの設定
LOCAL:7 = 1
IF LOCAL:5 == 6
	LOCAL:7 = 16
ELSEIF LOCAL:5 == 5
	LOCAL:7 = 12
ELSEIF LOCAL:5 == 4
	LOCAL:7 = 8
ELSEIF LOCAL:5 >= 2
	IF LOCAL:5 == 3
		LOCAL:7 = 4
	ELSE
		LOCAL:7 = 2
	ENDIF
ENDIF

FOR LOCAL:0, 0, 100
	;同時絶頂によるボーナスを掛ける(廃止)
	;NOWEX:(ARG:0):(LOCAL:0) *= LOCAL:7

	;絶頂回数を加算
	EX:(ARG:0):(LOCAL:0) += NOWEX:(ARG:0):(LOCAL:0) * LOCAL:7
NEXT

IF LOCAL:5 == 6
	;六重絶頂
	IF LOCAL:6 == 6
		SETCOLOR カラー_警告
		PRINT  <最 強 六 重 絶 頂>
	ELSE
		SETCOLOR 0xFF4000
		PRINT  <六 重 絶 頂>
	ENDIF
ELSEIF LOCAL:5 == 5
	;五重絶頂
	IF LOCAL:6 == 5
		SETCOLOR カラー_警告
		PRINT  <最 強 五 重 絶 頂>
	ELSE
		SETCOLOR 0xFF4000
		PRINT  <五 重 絶 頂>
	ENDIF
ELSEIF LOCAL:5 == 4
	;四重絶頂
	IF LOCAL:6 == 4
		SETCOLOR カラー_オレンジ
		PRINT  <最 強 四 重 絶 頂>
	ELSE
		SETCOLOR 0xFFC000
		PRINT  <四 重 絶 頂>
	ENDIF
ENDIF
RESETCOLOR

IF LOCAL:10
	;絶頂による体力・気力の消耗
	LOCAL:8 = LOCAL:30 / 200
	LOCAL:9 = LOCAL:31 / 200
	DOWNBASE:(ARG:0):体力 += LOCAL:8
	DOWNBASE:(ARG:0):気力 += LOCAL:9
;	PRINTFORM  体力-{LOCAL:8} 気力-{LOCAL:9}
ENDIF

SIF BASE:(ARG:0):精神力 > 0 && CFLAG:(ARG:0):崩壊
	CFLAG:(ARG:0):崩壊 = MAX(CFLAG:(ARG:0):崩壊 - SUM_NOWEX(ARG:0) * 5, 0)

IF LOCAL:10
	PRINTL
ENDIF

;-------------------------------------------------
;射精の内部処理
;-------------------------------------------------
@PROCESS_EJACULATION(対象, 強度, スラッシュ)
#DIM 対象
#DIM 射精相手
#DIM 射精先
#DIM 強度
#DIM 射精量
#DIM 補正後射精量
#DIM スラッシュ
#DIMS 出力文字列
#DIMS あふれ文字列
#DIMS 射精先文字列
#DIM 愛情倍率
#DIM 屈従倍率
#DIM 恐怖倍率

VARSET LOCAL

IF スラッシュ
	PRINT /
ELSE
	IF !TFLAG:3
		TFLAG:3 = 1
		PRINTL
	ENDIF
	PRINTFORM %ANAME(対象), MAX_CHARANAME_LENGTH, RIGHT%:
ENDIF
出力文字列 =

IF IS_EQUIP_TARGET(対象, 78) && TCVAR:対象:77 == 0
	SETCOLOR カラー_ピンク
	PRINTFORM 射精止め
	RESETCOLOR
	TCVAR:(対象):76 += 強度
	RETURN 0
ENDIF

;絶頂強度に応じてNOWEXをセットし、メッセージの表示(开始)
IF 強度 >= 200000 || ((TALENT:(対象):精力超群 || TCVAR:(対象):66) && 強度 >= 80000)
	IF 対象 == MASTER
		SETCOLOR 0x800080
	ELSE
		SETCOLOR 0xFF4000
	ENDIF
	IF !TALENT:対象:精力超群 && !TCVAR:対象:66
		射精量 = 20 + (強度 - 150000) / 20000
	ELSE
		射精量 = 20 + (強度 - 60000) / 10000
	ENDIF
	出力文字列 =  超超大量
ELSEIF 強度 >= 80000 || ((TALENT:(対象):精力超群 || TCVAR:(対象):66) && 強度 >= 40000)
	IF 対象 == MASTER
		SETCOLOR 0x6000FF
	ELSE
		SETCOLOR カラー_オレンジ
	ENDIF
	射精量 = RAND(10, 21)
	出力文字列 = 超大量
ELSEIF 強度 >= 40000 || TALENT:(対象):精力超群 || TCVAR:(対象):66
	IF 対象 == MASTER
		SETCOLOR 0x0080FF
	ELSE
		SETCOLOR 0xFFC000
	ENDIF
	射精量 = RAND(5, 16)
	出力文字列 = 大量
ELSE
	IF 対象 == MASTER
		SETCOLOR カラー_シアン
	ELSE
		SETCOLOR カラー_注意
	ENDIF
	射精量 = RAND(3, 9)
ENDIF

SIF IS_EQUIP_TARGET(対象, GETNUM(TRAINNAME, "揉搓睾丸"))
	射精量 = 射精量 * 3 / 2

IF SOURCE:(対象):快Ｐ == 0 && NOWEX:対象:Ｖ絶頂 + NOWEX:対象:Ａ絶頂 > 0
	出力文字列 = %出力文字列%机械地
	;TranslatedMark 出力文字列 = %出力文字列%ところてん
ENDIF
PRINTFORM %出力文字列%射精
RESETCOLOR

NOWEX:対象:射精 = 射精量
EXP:(対象):射精経験値 += 射精量 / 3
EXP:(対象):絶頂経験 += 射精量 / 3

射精先文字列 =
あふれ文字列 =
FOR LOCAL:0, 0, STACK_SPERM_CHARA_NUM:対象:0

	射精相手 = STACK_SPERM_CHARA_MAP:対象:LOCAL
	射精先 = STACK_SPERM_TO_MAP:対象:LOCAL

	;射精場所に応じた補正を掛けて精愛経験値を加算
	;射精場所に応じたソースを追加(LOCAL:13=愛情倍率、屈従倍率=屈従倍率、恐怖倍率=恐怖倍率)
	愛情倍率 = 20
	屈従倍率 = 20
	恐怖倍率 = 20

	IF !GROUPMATCH(射精先, 射精部位_無駄, 射精部位_触手)
		SELECTCASE ABL:(射精相手):精愛
			CASE 0
				LOCAL:12 = 0
			CASE 1
				LOCAL:12 = 20
			CASE 2
				LOCAL:12 = 50
			CASE 3
				LOCAL:12 = 80
			CASE 4
				LOCAL:12 = 120
			CASEELSE
				LOCAL:12 = MIN(ABL:(射精相手):精愛 * 3 + 150, 2000)
		ENDSELECT
	ENDIF
	SELECTCASE 射精先
		;膣内
		CASE 1
			愛情倍率 = 80
			屈従倍率 = 60
			恐怖倍率 = 200
			IF IS_OVULATION(射精相手)
				TIMES 愛情倍率, 1.5
				TIMES 屈従倍率, 1.5
				TIMES 恐怖倍率, 1.5
				TIMES LOCAL:12, 1.5
			ENDIF
			EXP:射精相手:膣内射精経験 ++
		;アナル
		CASE 2
			愛情倍率 = 40
			屈従倍率 = 120
			恐怖倍率 = 40
			EXP:射精相手:腸内射精経験 ++
		CASE 3
		;口
		CASE 4
			愛情倍率 = 50
			屈従倍率 = 40
			恐怖倍率 = 40
			EXP:射精相手:口内射精経験 ++
		;胸
		CASE 5
			愛情倍率 = 40
			屈従倍率 = 30
			恐怖倍率 = 30
		CASE 6
		CASE 7
		;顔
		CASE 8
			愛情倍率 = 30
			屈従倍率 = 30
			恐怖倍率 = 30
		;髪
		CASE 9
		CASE 10
		CASE 11
		;オナホ
		CASE 12
		;触手
		CASE 13
		;ゴム
		CASE 14
		;その他
		CASEELSE
	ENDSELECT

	IF !GROUPMATCH(射精先, 射精部位_無駄, 射精部位_触手)
		;射精量による補正
		SELECTCASE NOWEX:(対象):射精
			CASE 1 TO 3
				TIMES 愛情倍率, 1.00
				TIMES 屈従倍率, 1.00
				TIMES 恐怖倍率, 1.00
			CASE 4 TO 6
				TIMES 愛情倍率, 1.50
				TIMES 屈従倍率, 1.50
				TIMES 恐怖倍率, 1.50
			CASE 7 TO 10
				TIMES 愛情倍率, 2.00
				TIMES 屈従倍率, 2.00
				TIMES 恐怖倍率, 2.00
			CASE IS > 10
				TIMES 愛情倍率, 2.50
				TIMES 屈従倍率, 2.50
				TIMES 恐怖倍率, 2.50
		ENDSELECT
		SIF !GROUPMATCH(射精先, 射精部位_ゴム)
			EXP:(射精相手):精愛経験値 += 射精量
	ENDIF

	IF !GROUPMATCH(射精先, 射精部位_無駄, 射精部位_触手)
		;愛情ソースの追加
		CALL ADD_SOURCE_AIZYOU(射精相手, 愛情倍率)
	ENDIF

	;屈従ソースの追加
	CALL ADD_SOURCE_INITIATIVE_U(対象, 0, 屈従倍率)

	補正後射精量 = CUM_AMOUNT_CORRECTION(GET_ID(対象), 射精相手, 射精先, 射精量)

	IF !GROUPMATCH(射精先, 射精部位_無駄, 射精部位_触手)
		IF !IS_INITIATIVE(射精相手)
			LOCAL:16 = 100
			IF TALENT:(射精相手):恋慕 || TALENT:(射精相手):服従
				LOCAL:16 = 0
			ELSEIF CFLAG:(射精相手):2 >= 1500
				LOCAL:16 = 30
			ELSEIF CFLAG:(射精相手):2 >= 800
				LOCAL:16 = 60
			ENDIF
			SOURCE:(射精相手):恐怖 += 射精量 * 恐怖倍率 * LOCAL:16 / 100
		ENDIF

		SOURCE:(射精相手):中毒充足 += 射精量 * LOCAL:12

	;射精箇所が触手なら相手の妖術経験値をプラス
		IF 射精先 == 射精部位_触手
			EXP:(射精相手):妖術経験値 += 射精量 * 2
		ENDIF

		IF 補正後射精量 != CORRECT_CUM_OVERFLOW(射精相手, 射精先, 補正後射精量)
			あふれ文字列=%あふれ文字列%%TOSTR_SPACE(MAX_CHARANAME_LENGTH + 1)%{補正後射精量 - CORRECT_CUM_OVERFLOW(射精相手, 射精先, 補正後射精量)}ml的精液、从已经满了的%ANAME(射精相手)%的%CUM_SLOT_NAME:射精先%溢了出来……\n
			補正後射精量 = CORRECT_CUM_OVERFLOW(射精相手, 射精先, 補正後射精量)
		ENDIF
	ENDIF

;体内に対する射精か見る。コンドームの場合INJECTIONさせない
	IF !IS_EQUIP_PLAYER(対象, 75)
		CALL RECORD_CREAMPIE(射精相手, GET_ID(対象), 補正後射精量, 射精先)
	ENDIF

	CUM_TO_COUNT:(対象):(射精先) ++
	CUM_TO_AMOUNT:(対象):(射精先) += 補正後射精量

	射精先文字列=%射精先文字列%(%CUM_SLOT_NAME:射精先%

	CUM_GET_AMOUNT:(射精相手):(射精先) += 補正後射精量
	CUM_GET_COUNT:(射精相手):射精先 ++
	CUM_CUR_AMOUNT:(射精相手):(射精先) += 補正後射精量
	射精先文字列=%射精先文字列%:{補正後射精量}ml
	IF !GROUPMATCH(射精先, 射精部位_無駄, 射精部位_ゴム, 射精部位_触手)
		射精先文字列=%射精先文字列%:%ANAME(射精相手)%
	ENDIF
	射精先文字列=%射精先文字列%)
NEXT
SIF 射精先文字列 != ""
	PRINTFORM %射精先文字列%
IF あふれ文字列 != ""
	PRINTL
	PRINTFORM %SUBSTRING(あふれ文字列, 0, STRLENS(あふれ文字列) - 1)%
ENDIF

;-------------------------------------------------
;DESC  :口内射精、膣内射精等であふれる場合、入るだけの量に補正する
;-------------------------------------------------
@CORRECT_CUM_OVERFLOW(対象, 射精先, 射精量)
#FUNCTION
#DIM 対象
#DIM 射精先
#DIM 射精量
#DIM 精液量

SIF !GROUPMATCH(射精先, 射精部位_口, 射精部位_アナル, 射精部位_膣内)
	RETURNF 射精量

精液量 = 0
SELECTCASE 射精先
	CASE 射精部位_膣内
		精液量 = SUM_WOMB_SPERM_AMOUNT(対象)
		IF 精液量 >= CALC_WOMB_SIZE(対象)
			RETURNF 0
		ELSEIF 精液量 + 射精量 >= CALC_WOMB_SIZE(対象)
			RETURNF CALC_WOMB_SIZE(対象) - 精液量
		ELSE
			RETURNF 射精量
		ENDIF
	CASE 射精部位_口
		精液量 = SUM_STOMACH_SPERM_AMOUNT(対象)
		IF 精液量 >= CALC_STOMACH_SIZE(対象)
			RETURNF 0
		ELSEIF 精液量 + 射精量 >= CALC_STOMACH_SIZE(対象)
			RETURNF CALC_STOMACH_SIZE(対象) - 精液量
		ELSE
			RETURNF 射精量
		ENDIF
	CASE 射精部位_アナル
		精液量 = SUM_ANUS_SPERM_AMOUNT(対象)
		IF 精液量 >= CALC_ANUS_SIZE(対象)
			RETURNF 0
		ELSEIF 精液量 + 射精量 >= CALC_ANUS_SIZE(対象)
			RETURNF CALC_ANUS_SIZE(対象) - 精液量
		ELSE
			RETURNF 射精量
		ENDIF
ENDSELECT

RETURNF 射精量

;-------------------------------------------------
;DESC  :射精量の補正
;-------------------------------------------------
@CUM_AMOUNT_CORRECTION(精液ID, 射精相手, 射精先, 射精量)
#FUNCTION
#DIM 精液ID
#DIM 射精者
#DIM 射精相手
#DIM 射精先
#DIM 射精量

射精者 = ID_TO_CHARA(精液ID)

IF 射精者 >= 0
	SIF GETBIT(TALENT:射精者:淫乱系, 素質_淫乱_射精狂い)
		射精量 += RAND(5, 16)

	SIF GETBIT(TALENT:射精者:淫乱系, 素質_淫乱_濃厚精液)
		射精量 += RAND(5, 16)
ENDIF

;危険日なら倍
SIF 射精相手 >= 0 && IS_OVULATION(射精相手) && 射精先 == 射精部位_膣内
	射精量 *= 2

SIF 射精者 >= 0
	精液ID = TO_MOB_SPERM_ID(射精者)

;対象が動物の場合、IDを変換
IF 射精者 >= 0 && IS_ANIMAL(射精者)
	SELECTCASE TALENT:射精者:動物
		CASE 動物_犬
			精液ID = GET_SPERM_ID("犬")
		CASE 動物_豚
			精液ID = GET_SPERM_ID("豚")
		CASE 動物_馬
