@K36_SP_ENEVT_6
    ;习得技能<我所望见的幻想乡>
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%K36_CALL_MASTER()%！这里！」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"不知道在哪里的%ANAME(四季_ID)%向%ANAME(MASTER)%发出了呼喊")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%向四处望去，发现%ANAME(四季_ID)%正在曲直厅的屋顶上向自己挥着手",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%跳了上去，%ANAME(四季_ID)%一下拉住了%ANAME(MASTER)%",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「午安，%ANAME(MASTER)%」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「午安，你怎么在这里啊？」",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「想休息一会呢……」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"说着，%ANAME(四季_ID)%躺了下去",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%ANAME(MASTER)%也一起来吧？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%也躺了下去")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"两人就在曲直厅的屋顶上并排地躺着，望着头顶的天空",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「从这里看，地狱的天空也和幻想乡的也没什么区别吧？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「是啊……」",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我想要睡一会呢……借%ANAME(MASTER)%的身体用一下吧？」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"说着，%ANAME(四季_ID)%让身体靠了上来，把头埋在了%ANAME(MASTER)%的胸口")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_睡着,四季_额外_清空,四季_额外_睡着)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「嘿嘿嘿……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%慢慢地睡去了")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%听着怀中少女的呼吸声，双眼也不禁闭上了",1)
    CBGCLEAR
    CALL K36_一段时间后_IMAGE
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%再次醒来的时候已经是黄昏了",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"夕阳悠闲地洒在了%ANAME(MASTER)%的身体上",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"身旁的少女已经不见了",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"取而代之的脑袋下枕着什么东西",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_爱意,四季_额外_清空)
    CALL KOJO_36_IMAGE
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%抬头望去，是%ANAME(四季_ID)%正在给自己坐着膝枕",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"她本人正凝视着远方，不知道在思考什么……")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「诶呀，醒来了吗。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%ANAME(MASTER)%睡得可真香呢！」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「唔……」",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%微笑着慢慢爱抚着%ANAME(MASTER)%的脑袋")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「还累的话不妨再睡一会把」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%在爱人的抚摸的余韵中享受着微热的阳光……")
    CALL K36_一段时间后_IMAGE
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「%K36_CALL_映姬()%刚刚在看哪里呀？」",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「三途川的对岸，原本的幻想乡……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「似乎外面的人来了以后幻想乡就变大了很多呢。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「诶呀，我的腿麻了！」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%赶紧起来，反过来把%ANAME(四季_ID)%抱在了怀中",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%一边揉搓着双腿，一边继续道")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_睡着,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_爱意,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「过去的记忆已经有些模糊了啊……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那个时候我还是地狱的判官，」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「一天要高强度的审判灵魂，」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「另一天则是休息日，可以自由支配。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我通常就是越过河畔……好好说教一下幻想乡的人。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那个时候最大的事情也不过就是……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「幻想乡被花海淹没程度的异变。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我仿佛还能看见在那花海之上，」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「一群气势汹汹地人跑过来『兴师问罪』。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_开心,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「然后我就把他们都打回去了，顺带再好好说教了一通」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%微微笑着",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「她们总是听不太进我的说教呢……得我一遍又一遍地提醒她们。」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那个时候……可真美好啊……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「欲望和贪念恰到好处的发泄……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「但又不会被随意地杀死」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「人们既不至于变成枯燥的神龛，也不会堕落成地狱的信徒」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「那才是……我爱的幻想乡啊……」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_维持上次,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「……」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_生气,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「所以说，我一定要把那个幻想乡带回来！」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我不想再看见人们互相残杀！」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我不想再看见弱小者被人欺凌！」")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_爱意,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我不想再每天……为%K36_CALL_MASTER()%担心了……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「所以我辞去了阎魔的职务，所以我选择来到了战场上……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「%ANAME(MASTER)%……和我一起吧！一起把那个幻想乡夺回来！」")
    CALL K36_NORMAL_SENTENCE_IMAGE_NOTICE(@" %ANAME(四季_ID)%下定了决心")
    CALL K36_NORMAL_SENTENCE_IMAGE_NOTICE(@" %ANAME(四季_ID)%习得了技能《我所望见的幻想乡》")
    CALL SKILL_LEARN_BY_NAME(四季_ID, スキル_ジャンル_TROOP, NO:四季_ID, "我所望见的幻想乡")
    RETURN 1
