@K36_SP_ENEVT_5
    ;习得技能<轮回之外的东方裁判>
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_生气,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「这就是触手吗……真恶心……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(MASTER)%和%ANAME(四季_ID)%收到了一批从战乱地区找到的『俘虏』")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"一大团粉红的触须胡乱的摇摆着",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"在察觉到%ANAME(四季_ID)%的气息后自动的靠近了")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_生气,四季_额外_清空,四季_额外_生气)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「哈！」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%重重地把悔悟棒拍在了触手团上")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"触手如同悲鸣一般发出了声音",1)
    CALL K36_NORMAL_SENTENCE_IMAGE(@"挣扎了几下后便失去了生命……")
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_担忧,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「真是罪孽深重的东西啊……」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「幻想乡还是出现了这种东西呢……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「所以……到底是什么呢？」",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_普通,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「具体的话我不清楚。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「但从根本逻辑上，这是轮回的必然产物。」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"「必然产物？」",1)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「『六十年的轮回』，当然啦，现在也不是必须是六十年。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「用人类的话来说差不多就是『历史周期律』吧？」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「乐园中的人们总是会忘记痛苦的滋味是什么。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「然后用自己最卑劣的欲望制造人间地狱。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「最后侥幸在地狱中存活的人舔舐着自己的伤口，再次创造乐园……」")
    CALL K36_NORMAL_SENTENCE_IMAGE(@"%ANAME(四季_ID)%厌恶的把触手的尸体推开",1)
    CALL SET_SHIKIEIKI_FACE(四季_衣服_常服,四季_感情_生气,四季_额外_清空)
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「这种东西被创造出来就是为了制造痛苦，这点是毫无疑问的！」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「哪怕它在功能上再能取悦人的欲望，」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「但实际上只会制造痛苦！」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我没想到有一天还能在幻想乡看见这种东西。」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我一定要把这种东西全部驱逐出去！」")
    CALL K36_SHIKIEIKI_SAY_IMAGE(@"「我不想有一天只能审判这种罪恶之物！」")
    CALL K36_NORMAL_SENTENCE_IMAGE_NOTICE(@" %ANAME(四季_ID)%习得了技能《轮回之外的东方裁判》")
    CALL SKILL_LEARN_BY_NAME(四季_ID, スキル_ジャンル_PERSONAL, NO:四季_ID, "轮回之外的东方裁判")
    RETURN 1
