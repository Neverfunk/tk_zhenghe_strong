;--------------------------------------
;蜂起イベントが発生するかの判定
;--------------------------------------
@TENTACLE_RISE_RATE()
;既に出現しているか、触手なし設定なら発動しない
SIF SP_COUNTRY_APPEARED:特殊勢力_触手 || !SP_COUNTRY_RANK:(特殊勢力_触手)
	RETURN 0

;いっぱいなら駄目
SIF GET_NEW_COUNTRY() == -1
	RETURN 0

SIF !CHECK_SP_COUNTRY_RISE(特殊勢力_触手)
	RETURN 0
RETURN 1


;--------------------------------------
;蜂起イベント用メッセージ関数
;出現できたら1、できなければ0をかえす
;--------------------------------------
@TENTACLE_RISE(都市 = 0)
#DIM 触手
#DIM 都市
;触手勢力を作成
CALL TENTACLE_INIT()
触手 = RESULT
;作れなかったら戻す
SIF 触手 == 0
	RETURN 0

CALL SP_COUNTRY_RISE(触手, 都市)

SIF !RESULT
	RETURN 0

SP_COUNTRY_APPEARED:特殊勢力_触手 = 1
RETURN 触手

