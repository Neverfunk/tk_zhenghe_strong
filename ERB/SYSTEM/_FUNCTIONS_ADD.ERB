; 返回国家名称
@GET_COUNTRY_NAME(COUNTRY_ID,SHORT_FLAG = 0)
    #FUNCTIONS
    #DIM COUNTRY_ID
    #DIM SHORT_FLAG
    SIF !INRANGE(COUNTRY_ID,0,MAX_COUNTRY-1)
        THROW "错误国家ID":{COUNTRY_ID}
    SIF COUNTRY_ID == 0
        RETURNF "无所属"
    SIF !IS_COUNTRY(COUNTRY_ID)
        RETURNF ""
    IF SHORT_FLAG
        RETURNF SNAME(GET_COUNTRY_BOSS(COUNTRY_ID))
    ELSE
        RETURNF ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))

    ENDIF

; 返回百分比概率
@GET_RATE(RATE_NUM)
    #FUNCTION
    #DIM RATE_NUM
    IF RATE_NUM <= 0
        RETURNF 0
    ELSEIF RATE_NUM >= 100
        RETURNF 1
    ELSE
        RETURNF (RAND:100 < RATE_NUM)
    ENDIF

