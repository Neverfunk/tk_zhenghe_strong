	CASEELSE
		IF TOINT(カラーブレンド名) > 0
			CALL COLORTOMATRIX(カラーマトリクス, カラーブレンド名)
		ELSE
			CALL カラーマトリクス取得(カラーマトリクス, 12)
		ENDIF
ENDSELECT
RETURN 1

;********************************************************************************************
;カラーマトリクス取得関数
;ディクショナリーライブラリから引用
;********************************************************************************************
@カラーマトリクス取得(カラーマトリクス, MID)
#DIM REF カラーマトリクス, 0, 0
#DIM MID ;マトリクスID
FOR LOCAL, 0, 5
	FOR LOCAL:1, 0, 5
		カラーマトリクス:LOCAL:(LOCAL:1) = カラーマトリクスベース:MID:LOCAL:(LOCAL:1)
	NEXT
NEXT
RETURN 1


