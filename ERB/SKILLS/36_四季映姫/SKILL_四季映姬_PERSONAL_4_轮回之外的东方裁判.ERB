    SIF !IS_COUNTRY(対象勢力)
        RETURN 0
    SIF IS_COUNTRY(対象勢力) && !IS_SP_COUNTRY(対象勢力)
        RETURN 0
;効果をここに記述
@SKILL_36_PERSONAL_4_INVOKE(発動者, 発動番号, 発動側, 発動勢力, 発動部隊, 対象勢力, 対象部隊)
    #DIM 発動者
    #DIM 発動番号
    #DIM スキル
    #DIMS ジャンル
    #DIM 発動側
    #DIM 発動勢力
    #DIM 発動部隊
    #DIM 対象側
    #DIM 対象勢力
    #DIM 対象部隊
    対象側 = !発動側
    FOR LOCAL,0,BATTLE_COMMANDER_NUM:対象側
        SIF !IS_SP_CHARA(BATTLE_COMMANDER:対象側:LOCAL)
            CONTINUE
        TIMES BATTLE_武闘パワー:発動側:LOCAL,0.7
        TIMES BATTLE_防衛パワー:発動側:LOCAL,0.7
        TIMES BATTLE_知略パワー:発動側:LOCAL,0.7
        TIMES BATTLE_歌唱パワー:発動側:LOCAL,0.7
        TIMES BATTLE_料理パワー:発動側:LOCAL,0.7
        TIMES BATTLE_妖術パワー:発動側:LOCAL,0.5
    NEXT



