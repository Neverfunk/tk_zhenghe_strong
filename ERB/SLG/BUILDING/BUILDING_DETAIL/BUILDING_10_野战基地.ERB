@CHECK_BUILDING_FUNCTION_野战基地(CITY_ID)
    #FUNCTION
    #DIM CITY_ID
    RESULT:1 = GET_CITY_BUILDING_NUM(CITY_ID,建造物_野战基地)*20
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_野战基地_1(COUNTRY_ID,CITY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM CITY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 因为《野战基地》的存在，
    PRINTFORML 位于%CITY_NAME:CITY_ID%的%ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的军队歌唱提高了！
    RETURNF 1

