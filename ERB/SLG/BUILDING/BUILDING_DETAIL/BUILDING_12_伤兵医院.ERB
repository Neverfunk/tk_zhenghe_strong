@BUILDING_GET_NAME_伤兵医院()
    #FUNCTIONS
    RETURNF "伤兵医院"

@BUILDING_GET_EXP_伤兵医院()
    #FUNCTIONS
    RETURNF "驻扎在本城市的我方部队的疲劳值降低。"

@BUILDING_SET_INFO_ID_12()
    BUILDING_TYPE:建造物_伤兵医院 = 建造物_类型_军事类
    BUILDING_LEVEL:建造物_伤兵医院 = 建造物_等级_一级建筑
    BUILDING_LIMIT_NUM:建造物_伤兵医院 = 建造物_数量限制_无
    BUILDING_LIMIT_UNI:建造物_伤兵医院 = 0
    BUILDING_COUNTRY_ID:建造物_伤兵医院:特殊勢力_普通势力 = 1
    BUILDING_HAVE_SKILL:建造物_伤兵医院 = 0
    BUILDING_TOHO_REQ_ID:建造物_伤兵医院:0 = 0

@CHECK_BUILDING_FUNCTION_伤兵医院(CITY_ID)
    #FUNCTION
    #DIM CITY_ID
    RESULT:1 = GET_CITY_BUILDING_NUM(CITY_ID,建造物_伤兵医院)
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_伤兵医院(COUNTRY_ID,CITY_ID,UNIT_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM CITY_ID
    #DIM UNIT_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORM 因为《伤兵医院》的存在，
    PRINTFORML 位于%CITY_NAME:CITY_ID%的%ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的军队{UNIT_ID}疲劳恢复了！
    RETURNF 1
