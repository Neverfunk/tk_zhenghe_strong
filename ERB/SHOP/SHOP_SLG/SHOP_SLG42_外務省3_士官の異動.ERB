@SELECT_CHARA_LIST_SHOW_LOGIC_SUMMON_CHARA(対象)
#DIM 対象
RETURN CFLAG:対象:所属 == SUMMON_SUMMON && 対象 != MASTER && 対象 != GET_COUNTRY_BOSS(CFLAG:対象:所属) && !CFLAG:対象:捕虜先 && !IS_SP_CHARA(対象)
