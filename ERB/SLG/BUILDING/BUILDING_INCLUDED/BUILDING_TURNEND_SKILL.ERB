@SLG_BUILDING_TURNEND_CHANGE_SKILL_FLAG()
    #DIM COUNTRY_ID
    #DIM BUILDING_ID
    FOR COUNTRY_ID,0,MAX_COUNTRY
        SIF !IS_COUNTRY(COUNTRY_ID)
            CONTINUE
        FOR BUILDING_ID,BUILDING_START,BUILDING_NUM
            CALL BUILDING_SKILL_COLDTIME_DECREASE(COUNTRY_ID,BUILDING_ID)
            CALL BUILDING_SKILL_BUFF_DECREASE(COUNTRY_ID,BUILDING_ID)
        NEXT
    NEXT

@BUILDING_SKILL_COLDTIME_DECREASE(COUNTRY_ID,BUILDING_ID)
    #DIM COUNTRY_ID
    #DIM BUILDING_ID
    IF BUILDING_SKILL_COLDTIME:COUNTRY_ID:BUILDING_ID > 0
        SIF CHECK_BUILDING_FUNCTION_SELECT(-1,COUNTRY_ID,BUILDING_ID) > 0
            BUILDING_SKILL_COLDTIME:COUNTRY_ID:BUILDING_ID --
    ENDIF

@BUILDING_SKILL_BUFF_DECREASE(COUNTRY_ID,BUILDING_ID)
    #DIM COUNTRY_ID
    #DIM BUILDING_ID
    IF !CHECK_BUILDING_CHARA_LIMIT_USING(COUNTRY_ID,BUILDING_ID)
        BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:BUILDING_ID = 0
        BUILDING_SKILL_BUFF:COUNTRY_ID:BUILDING_ID = 0
        RETURN
    ENDIF
    IF BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:BUILDING_ID > 0
        BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:BUILDING_ID --
        SIF BUILDING_SKILL_BUFF_REMAIN:COUNTRY_ID:BUILDING_ID == 0
            BUILDING_SKILL_BUFF:COUNTRY_ID:BUILDING_ID = 0
    ENDIF
