@BUILDING_GET_NAME_弓櫓()
    #FUNCTIONS
    RETURNF "弓櫓"

@BUILDING_GET_EXP_弓櫓()
    #FUNCTIONS
    RETURNF "都市的援护射击强化。"

@BUILDING_SET_INFO_ID_32()
    BUILDING_TYPE:建造物_弓櫓 = 建造物_类型_防御类
    BUILDING_LEVEL:建造物_弓櫓 = 建造物_等级_一级建筑
    BUILDING_LIMIT_NUM:建造物_弓櫓 = 建造物_数量限制_无
    BUILDING_LIMIT_UNI:建造物_弓櫓 = 0
    BUILDING_COUNTRY_ID:建造物_弓櫓:特殊勢力_普通势力 = 1
    BUILDING_HAVE_SKILL:建造物_弓櫓 = 0
    BUILDING_TOHO_REQ_ID:建造物_弓櫓:0 = 0

@CHECK_BUILDING_FUNCTION_弓櫓(CITY_ID)
    #FUNCTION
    #DIM CITY_ID
    RESULT:1 = GET_CITY_BUILDING_NUM(CITY_ID,建造物_弓櫓)
    IF RESULT:1 > 0
        RESULT:0 = 1
    ENDIF
    RETURNF RESULT:0

@BUILDING_TEXT_弓櫓(COUNTRY_ID,CITY_ID)
    #FUNCTION
    #DIM COUNTRY_ID
    #DIM CITY_ID
    SIF !CHECK_BUILDING_TEXT_OUTPUT(COUNTRY_ID)
        RETURNF 0
    BUILDING_TEXT = PRINT_BUILDING_TEXT_TITLE_F()
    PRINTFORML 因为《弓櫓》的存在，%ANAME(GET_COUNTRY_BOSS(COUNTRY_ID))%的%CITY_NAME:CITY_ID%的守军向城下的敌人射去了无数支箭！
    RETURNF 1
